# Production Environment Variables
# Copy this to .env.local and fill in your values

# Symfony environment
APP_ENV=prod
APP_SECRET=generate_with_openssl_rand_hex_32

# Base URL for generating links in emails and CLI contexts
APP_URL=https://yourdomain.com

# Database connection (MySQL/MariaDB)
DATABASE_URL="mysql://username:password@127.0.0.1:3306/database_name?serverVersion=8.0&charset=utf8mb4"

# Redis
REDIS_URL=redis://127.0.0.1:6379

# Mailer SMTP settings
MAILER_DSN=smtp://user:pass@smtp.example.com:587
MAILER_FROM_ADDRESS=noreply@yourdomain.com
MAILER_FROM_NAME="Your App Name"

# Trusted proxies for reverse proxy setup
TRUSTED_PROXIES=127.0.0.1
TRUSTED_HOSTS='^(localhost|yourdomain\.com)$'

###> knpuniversity/oauth2-client-bundle ###
# Google OAuth credentials (from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Enable/disable Google OAuth login (true/false)
GOOGLE_AUTH_ENABLED=true
###< knpuniversity/oauth2-client-bundle ###

# Domain restriction for user registration (comma-separated, empty = allow all)
# Applies to both Google OAuth and manual registration
ALLOWED_REGISTRATION_DOMAINS=yourdomain.com
