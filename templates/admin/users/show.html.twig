{% extends 'layout.html.twig' %}

{% block title %}{{ user.fullName }} - User Details{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto space-y-6">
    <div class="mb-6">
        <a href="{{ path('app_admin_users') }}" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
            <svg class="mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Back to Users
        </a>
    </div>

    <!-- User Info Card -->
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center">
                <div class="h-16 w-16 rounded-full bg-primary-100 flex items-center justify-center">
                    <span class="text-xl font-medium text-primary-700">{{ user.firstName|first }}{{ user.lastName|first }}</span>
                </div>
                <div class="ml-4">
                    <h1 class="text-xl font-semibold text-gray-900">{{ user.fullName }}</h1>
                    <p class="text-sm text-gray-500">{{ user.email }}</p>
                </div>
            </div>
        </div>

        <div class="px-6 py-4 grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
                <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider">Status</h3>
                <div class="mt-1 flex items-center space-x-2">
                    {% if user.isVerified %}
                    <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">Verified</span>
                    {% else %}
                    <span class="inline-flex items-center rounded-full bg-yellow-100 px-2.5 py-0.5 text-xs font-medium text-yellow-800">Pending Verification</span>
                    {% endif %}
                    {% if user.googleId %}
                    <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">Google Account</span>
                    {% endif %}
                </div>
            </div>

            <div>
                <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider">Joined</h3>
                <p class="mt-1 text-sm text-gray-900">{{ user.createdAt|date('F j, Y \\a\\t g:i A') }}</p>
            </div>

            <div>
                <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider">Last Updated</h3>
                <p class="mt-1 text-sm text-gray-900">{{ user.updatedAt|date('F j, Y \\a\\t g:i A') }}</p>
            </div>

            <div>
                <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider">System Roles</h3>
                <div class="mt-1 flex flex-wrap gap-1">
                    {% for role in user.roles %}
                    <span class="inline-flex items-center rounded bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-700">{{ role }}</span>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <!-- Portal Role -->
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Portal Role</h2>
            <p class="mt-1 text-sm text-gray-500">System-wide role that grants access across all projects</p>
        </div>

        <div class="px-6 py-4">
            {% if app.user.isPortalSuperAdmin and user.id != app.user.id %}
            <form method="post" action="{{ path('app_admin_users_update_role', {id: user.id}) }}">
                <div class="flex items-end gap-4">
                    <div class="flex-1">
                        <label for="portal_role" class="block text-sm font-medium text-gray-700">Assign Portal Role</label>
                        <select name="portal_role" id="portal_role"
                                class="mt-1 block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm">
                            <option value="">No Portal Role</option>
                            {% for role in portalRoles %}
                            <option value="{{ role.id }}" {% if user.portalRole and user.portalRole.id == role.id %}selected{% endif %}>
                                {{ role.name }} - {{ role.description ?? 'No description' }}
                            </option>
                            {% endfor %}
                        </select>
                    </div>
                    <button type="submit" class="rounded-md bg-primary-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-500">
                        Update Role
                    </button>
                </div>
            </form>
            {% else %}
            <div class="text-sm">
                {% if user.portalRole %}
                <div class="flex items-center">
                    <span class="inline-flex items-center rounded-full bg-purple-100 px-3 py-1 text-sm font-medium text-purple-800">
                        {{ user.portalRole.name }}
                    </span>
                    <span class="ml-3 text-gray-500">{{ user.portalRole.description }}</span>
                </div>
                <div class="mt-4">
                    <h4 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Permissions</h4>
                    <div class="flex flex-wrap gap-1">
                        {% for permission in user.portalRole.permissions %}
                        <span class="inline-flex items-center rounded bg-purple-50 px-2 py-0.5 text-xs font-medium text-purple-700">{{ permission }}</span>
                        {% endfor %}
                    </div>
                </div>
                {% else %}
                <p class="text-gray-500">This user has no portal role assigned.</p>
                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Project Memberships -->
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Project Memberships</h2>
            <p class="mt-1 text-sm text-gray-500">Projects this user is a member of</p>
        </div>

        <div class="divide-y divide-gray-200">
            {% for membership in user.projectMemberships %}
            <div class="px-6 py-4 flex items-center justify-between">
                <div>
                    <h3 class="text-sm font-medium text-gray-900">{{ membership.project.name }}</h3>
                    <p class="text-sm text-gray-500">Joined {{ membership.joinedAt|date('M j, Y') }}</p>
                </div>
                <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                    {{ membership.role.name }}
                </span>
            </div>
            {% else %}
            <div class="px-6 py-4 text-sm text-gray-500">
                This user is not a member of any projects.
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
