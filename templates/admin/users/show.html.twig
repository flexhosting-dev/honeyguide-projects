{% extends 'layout.html.twig' %}

{% block title %}{{ user.fullName }} - User Details{% endblock %}

{% set page_title = user.fullName %}

{% block content %}
<div class="user-show-page space-y-6">
    <nav class="user-show-breadcrumb flex items-center gap-2 text-sm text-gray-500">
        <a href="{{ path('app_settings') }}" class="hover:text-primary-600 transition-colors">Settings</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
        </svg>
        <a href="{{ path('admin_users_index') }}" class="hover:text-primary-600 transition-colors">Users</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
        </svg>
        <span class="text-gray-900 font-medium">{{ user.fullName }}</span>
    </nav>

    <div class="user-show-content max-w-4xl mx-auto space-y-6">
    <!-- User Info Card -->
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center">
                <div class="h-16 w-16 rounded-full overflow-hidden flex items-center justify-center">
                    {% if user.avatar %}
                        <img src="{{ app.request.basePath }}/uploads/avatars/{{ user.avatar }}" alt="{{ user.fullName }}" class="w-full h-full object-cover">
                    {% else %}
                        <span class="w-full h-full bg-gradient-to-br from-emerald-400 to-cyan-500 flex items-center justify-center">
                            <span class="text-xl font-medium text-white">{{ user.firstName|first }}{{ user.lastName|first }}</span>
                        </span>
                    {% endif %}
                </div>
                <div class="ml-4">
                    <h1 class="text-xl font-semibold text-gray-900">{{ user.fullName }}</h1>
                    <p class="text-sm text-gray-500">{{ user.email }}</p>
                </div>
            </div>
        </div>

        <div class="px-6 py-4 grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
                <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider">Status</h3>
                <div class="mt-1 flex items-center space-x-2">
                    {% if user.isVerified %}
                    <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">Verified</span>
                    {% else %}
                    <span class="inline-flex items-center rounded-full bg-yellow-100 px-2.5 py-0.5 text-xs font-medium text-yellow-800">Pending Verification</span>
                    {% endif %}
                    {% if user.googleId %}
                    <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">Google Account</span>
                    {% endif %}
                </div>
            </div>

            <div>
                <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider">Joined</h3>
                <p class="mt-1 text-sm text-gray-900">{{ user.createdAt|date('F j, Y \\a\\t g:i A') }}</p>
            </div>

            <div>
                <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider">Last Updated</h3>
                <p class="mt-1 text-sm text-gray-900">{{ user.updatedAt|date('F j, Y \\a\\t g:i A') }}</p>
            </div>

            <div>
                <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider">System Roles</h3>
                <div class="mt-1 flex flex-wrap gap-1">
                    {% for role in user.roles %}
                    <span class="inline-flex items-center rounded bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-700">{{ role }}</span>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <!-- Portal Role -->
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Portal Role</h2>
            <p class="mt-1 text-sm text-gray-500">System-wide role that grants access across all projects</p>
        </div>

        <div class="px-6 py-4">
            {% if app.user.isPortalSuperAdmin and user.id != app.user.id %}
            <form method="post" action="{{ path('admin_users_update_role', {id: user.id}) }}">
                <div class="flex items-end gap-4">
                    <div class="flex-1">
                        <label for="portal_role" class="block text-sm font-medium text-gray-700">Assign Portal Role</label>
                        <select name="portal_role" id="portal_role"
                                class="mt-1 block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm">
                            <option value="">Portal Member</option>
                            {% for role in portalRoles %}
                            <option value="{{ role.id }}" {% if user.portalRole and user.portalRole.id == role.id %}selected{% endif %}>
                                {{ role.name }} - {{ role.description ?? 'No description' }}
                            </option>
                            {% endfor %}
                        </select>
                    </div>
                    <button type="submit" class="rounded-md bg-primary-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-500">
                        Update Role
                    </button>
                </div>
            </form>
            {% else %}
            <div class="text-sm">
                {% if user.portalRole %}
                <div class="flex items-center">
                    <span class="inline-flex items-center rounded-full bg-purple-100 px-3 py-1 text-sm font-medium text-purple-800">
                        {{ user.portalRole.name }}
                    </span>
                    <span class="ml-3 text-gray-500">{{ user.portalRole.description }}</span>
                </div>
                <div class="mt-4">
                    <h4 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Permissions</h4>
                    <div class="flex flex-wrap gap-1">
                        {% for permission in user.portalRole.permissions %}
                        <span class="inline-flex items-center rounded bg-purple-50 px-2 py-0.5 text-xs font-medium text-purple-700">{{ permission }}</span>
                        {% endfor %}
                    </div>
                </div>
                {% else %}
                <p class="text-gray-500">This user is a Portal Member.</p>
                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Project Memberships -->
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Project Memberships</h2>
            <p class="mt-1 text-sm text-gray-500">Projects this user is a member of</p>
        </div>

        <div class="divide-y divide-gray-200">
            {% for membership in user.projectMemberships %}
            <div class="px-6 py-4 flex items-center justify-between">
                <div>
                    <h3 class="text-sm font-medium text-gray-900">{{ membership.project.name }}</h3>
                    <p class="text-sm text-gray-500">Joined {{ membership.joinedAt|date('M j, Y') }}</p>
                </div>
                <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                    {{ membership.role.name }}
                </span>
            </div>
            {% else %}
            <div class="px-6 py-4 text-sm text-gray-500">
                This user is not a member of any projects.
            </div>
            {% endfor %}
        </div>
    </div>

    {% if app.user.isPortalSuperAdmin and user.id != app.user.id %}
    <!-- Danger Zone -->
    <div class="bg-white shadow rounded-lg border border-red-200">
        <div class="px-6 py-4 border-b border-red-200 bg-red-50">
            <h2 class="text-lg font-medium text-red-900">Danger Zone</h2>
            <p class="mt-1 text-sm text-red-600">Irreversible actions</p>
        </div>

        <div class="px-6 py-4">
            <div class="flex items-center justify-between">
                <div>
                    <h3 class="text-sm font-medium text-gray-900">Remove user from portal</h3>
                    <p class="text-sm text-gray-500">This will permanently delete this user and all their data.</p>
                </div>
                <button type="button" onclick="document.getElementById('delete-modal').classList.remove('hidden')"
                        class="rounded-md bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500">
                    Remove User
                </button>
            </div>
        </div>
    </div>
    {% endif %}
    </div>
</div>

<!-- Delete Confirmation Modal -->
{% if app.user.isPortalSuperAdmin and user.id != app.user.id %}
<div id="delete-modal" class="hidden relative z-50" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-gray-500/75 transition-opacity"></div>
    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
                <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
                            <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
                            </svg>
                        </div>
                        <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
                            <h3 class="text-base font-semibold text-gray-900" id="modal-title">Remove {{ user.fullName }}</h3>
                            <div class="mt-2">
                                <p class="text-sm text-gray-500">Are you sure you want to remove this user? This action cannot be undone. All of their data, including project memberships, will be permanently deleted.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
                    <form method="post" action="{{ path('admin_users_delete', {id: user.id}) }}">
                        <button type="submit" class="inline-flex w-full justify-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 sm:ml-3 sm:w-auto">Remove User</button>
                    </form>
                    <button type="button" onclick="document.getElementById('delete-modal').classList.add('hidden')"
                            class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
