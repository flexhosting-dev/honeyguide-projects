{% extends 'layout.html.twig' %}

{% block title %}User Management - Honeyguide Projects{% endblock %}

{% set page_title = 'Users' %}

{% block content %}
<div class="users-page space-y-6">
    <nav class="users-breadcrumb flex items-center gap-2 text-sm text-gray-500">
        <a href="{{ path('app_settings') }}" class="hover:text-primary-600 transition-colors">Settings</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
        </svg>
        <span class="text-gray-900 font-medium">Users</span>
    </nav>

    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">User Management</h1>
            <p class="mt-1 text-sm text-gray-500">Manage users and assign portal roles</p>
        </div>
    </div>

    <!-- Tabs -->
    <div class="border-b border-gray-200">
        <nav class="flex gap-4" aria-label="Tabs">
            <a href="{{ path('admin_users_index', {tab: 'users'}) }}"
               class="py-2 px-1 border-b-2 text-sm font-medium {{ tab == 'users' ? 'border-primary-500 text-primary-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' }}">
                Active Users
            </a>
            <a href="{{ path('admin_users_index', {tab: 'pending'}) }}"
               class="py-2 px-1 border-b-2 text-sm font-medium flex items-center gap-2 {{ tab == 'pending' ? 'border-primary-500 text-primary-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' }}">
                Pending Requests
                {% if pendingCount > 0 %}
                <span class="inline-flex items-center justify-center rounded-full bg-amber-100 text-amber-800 text-xs font-medium px-2 py-0.5">
                    {{ pendingCount }}
                </span>
                {% endif %}
            </a>
        </nav>
    </div>

    {% if tab == 'users' %}
    <!-- Search -->
    <div class="bg-white shadow rounded-lg p-4">
        <form method="get" action="{{ path('admin_users_index') }}" class="flex flex-col sm:flex-row gap-3 sm:gap-4">
            <input type="hidden" name="tab" value="users">
            <div class="flex-1">
                <input type="text" name="search" value="{{ search }}"
                       placeholder="Search by name or email..."
                       class="block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm">
            </div>
            <div class="flex gap-2">
                <button type="submit" class="flex-1 sm:flex-none rounded-md bg-primary-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-500">
                    Search
                </button>
                {% if search %}
                <a href="{{ path('admin_users_index', {tab: 'users'}) }}" class="flex-1 sm:flex-none text-center rounded-md bg-gray-100 px-4 py-2 text-sm font-semibold text-gray-700 hover:bg-gray-200">
                    Clear
                </a>
                {% endif %}
            </div>
        </form>
    </div>

    <!-- Users List - Desktop Table -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                        <th scope="col" class="hidden md:table-cell px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Portal Role</th>
                        <th scope="col" class="hidden lg:table-cell px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Joined</th>
                        <th scope="col" class="relative px-4 sm:px-6 py-3"><span class="sr-only">Actions</span></th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for user in users %}
                    <tr class="{% if user.id == app.user.id %}bg-primary-50{% endif %}">
                        <td class="px-4 sm:px-6 py-4">
                            <div class="flex items-center">
                                <div class="h-10 w-10 flex-shrink-0">
                                    <div class="h-10 w-10 rounded-full overflow-hidden flex items-center justify-center">
                                        {% if user.avatar %}
                                            <img src="{{ app.request.basePath }}/uploads/avatars/{{ user.avatar }}" alt="{{ user.fullName }}" class="w-full h-full object-cover">
                                        {% else %}
                                            <span class="w-full h-full bg-gradient-to-br from-emerald-400 to-cyan-500 flex items-center justify-center">
                                                <span class="text-sm font-medium text-white">{{ user.firstName|first }}{{ user.lastName|first }}</span>
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="ml-3 sm:ml-4 min-w-0">
                                    <div class="text-sm font-medium text-gray-900 truncate">
                                        {{ user.fullName }}
                                        {% if user.id == app.user.id %}
                                        <span class="ml-1 text-xs text-gray-500">(you)</span>
                                        {% endif %}
                                    </div>
                                    <!-- Show email on mobile under name -->
                                    <div class="md:hidden text-xs text-gray-500 truncate">{{ user.email }}</div>
                                </div>
                            </div>
                        </td>
                        <td class="hidden md:table-cell px-6 py-4">
                            <div class="text-sm text-gray-900 truncate max-w-xs">{{ user.email }}</div>
                        </td>
                        <td class="px-4 sm:px-6 py-4">
                            <div class="flex flex-wrap gap-1">
                                {% if user.isVerified %}
                                <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-0.5 text-xs font-medium text-green-800">Verified</span>
                                {% else %}
                                <span class="inline-flex items-center rounded-full bg-yellow-100 px-2 py-0.5 text-xs font-medium text-yellow-800">Pending</span>
                                {% endif %}
                                {% if user.googleId %}
                                <span class="inline-flex items-center rounded-full bg-blue-100 px-2 py-0.5 text-xs font-medium text-blue-800">Google</span>
                                {% endif %}
                            </div>
                        </td>
                        <td class="px-4 sm:px-6 py-4">
                            {% if app.user.isPortalSuperAdmin and user.id != app.user.id %}
                            <form method="post" action="{{ path('admin_users_update_role', {id: user.id}) }}" class="inline-block">
                                <select name="portal_role" onchange="this.form.submit()"
                                        class="block w-full min-w-[120px] rounded-md border-0 py-1 pl-2 pr-6 text-xs sm:text-sm text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-primary-600">
                                    <option value="">Portal Member</option>
                                    {% for role in portalRoles %}
                                    <option value="{{ role.id }}" {% if user.portalRole and user.portalRole.id == role.id %}selected{% endif %}>
                                        {{ role.name }}
                                    </option>
                                    {% endfor %}
                                </select>
                            </form>
                            {% else %}
                            {% if user.portalRole %}
                            <span class="inline-flex items-center rounded-full bg-purple-100 px-2 py-0.5 text-xs font-medium text-purple-800">
                                {{ user.portalRole.name }}
                            </span>
                            {% else %}
                            <span class="text-sm text-gray-400">-</span>
                            {% endif %}
                            {% endif %}
                        </td>
                        <td class="hidden lg:table-cell px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ user.createdAt|date('M j, Y') }}
                        </td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href="{{ path('admin_users_show', {id: user.id}) }}" class="text-primary-600 hover:text-primary-900">View</a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">
                            {% if search %}
                            No users found matching "{{ search }}"
                            {% else %}
                            No users found.
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <p class="text-sm text-gray-500">
        Showing {{ users|length }} user{{ users|length != 1 ? 's' : '' }}
    </p>
    {% else %}
    <!-- Pending Requests Tab -->
    {% include 'admin/users/_pending_requests.html.twig' %}
    {% endif %}
</div>
{% endblock %}
