{% extends 'layout.html.twig' %}

{% block title %}Create Status - WorkFlow{% endblock %}

{% set page_title = 'New Status' %}

{% block content %}
<div class="status-new-page space-y-6">
    <nav class="status-new-breadcrumb flex items-center gap-2 text-sm text-gray-500">
        <a href="{{ path('app_settings') }}" class="hover:text-primary-600 transition-colors">Settings</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
        </svg>
        <a href="{{ path('app_admin_statuses') }}" class="hover:text-primary-600 transition-colors">Task Statuses</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
        </svg>
        <span class="text-gray-900 font-medium">New Status</span>
    </nav>

    <div class="status-new-content max-w-2xl mx-auto">
        <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-4 border-b border-gray-200">
                <h1 class="text-xl font-semibold text-gray-900">Create New Status</h1>
                <p class="mt-1 text-sm text-gray-500">Add a custom status to your task workflow</p>
            </div>

            <form method="post" action="{{ path('app_admin_statuses_new') }}" class="p-6 space-y-6">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700">Status Name</label>
                    <input type="text" name="name" id="name" required
                           class="mt-1 block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm"
                           placeholder="e.g., Blocked, Pending Review">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">Status Type</label>
                    <div class="grid grid-cols-2 gap-4">
                        <label class="relative flex items-start p-4 border border-gray-200 rounded-lg cursor-pointer hover:border-primary-300 has-[:checked]:border-primary-500 has-[:checked]:bg-primary-50">
                            <input type="radio" name="parent_type" value="open" checked class="sr-only peer">
                            <div class="flex-1">
                                <span class="block text-sm font-medium text-gray-900">Open</span>
                                <span class="block text-xs text-gray-500 mt-1">Active/in-progress tasks</span>
                            </div>
                            <div class="absolute top-4 right-4 hidden peer-checked:block text-primary-600">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                        </label>
                        <label class="relative flex items-start p-4 border border-gray-200 rounded-lg cursor-pointer hover:border-primary-300 has-[:checked]:border-primary-500 has-[:checked]:bg-primary-50">
                            <input type="radio" name="parent_type" value="closed" class="sr-only peer">
                            <div class="flex-1">
                                <span class="block text-sm font-medium text-gray-900">Closed</span>
                                <span class="block text-xs text-gray-500 mt-1">Completed/done tasks</span>
                            </div>
                            <div class="absolute top-4 right-4 hidden peer-checked:block text-primary-600">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                        </label>
                    </div>
                </div>

                <div>
                    <label for="color" class="block text-sm font-medium text-gray-700">Color</label>
                    <div class="mt-1 flex items-center gap-3">
                        <input type="color" name="color" id="color" value="#6B7280"
                               class="h-10 w-14 rounded border border-gray-300 cursor-pointer">
                        <input type="text" id="color-hex" value="#6B7280" pattern="^#[0-9A-Fa-f]{6}$"
                               class="block w-28 rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 font-mono text-sm focus:ring-2 focus:ring-inset focus:ring-primary-600">
                        <div id="color-preview" class="w-8 h-8 rounded-full border border-gray-300" style="background-color: #6B7280;"></div>
                    </div>
                    <p class="mt-1 text-xs text-gray-500">Pick a color or enter a hex code</p>
                </div>

                <div>
                    <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                    <textarea name="description" id="description" rows="2"
                              class="mt-1 block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm"
                              placeholder="Optional description of when to use this status..."></textarea>
                </div>

                <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
                    <a href="{{ path('app_admin_statuses') }}" class="rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                        Cancel
                    </a>
                    <button type="submit" class="rounded-md bg-primary-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-500">
                        Create Status
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const colorPicker = document.getElementById('color');
    const colorHex = document.getElementById('color-hex');
    const colorPreview = document.getElementById('color-preview');

    colorPicker.addEventListener('input', function() {
        colorHex.value = this.value.toUpperCase();
        colorPreview.style.backgroundColor = this.value;
    });

    colorHex.addEventListener('input', function() {
        if (/^#[0-9A-Fa-f]{6}$/.test(this.value)) {
            colorPicker.value = this.value;
            colorPreview.style.backgroundColor = this.value;
        }
    });
});
</script>
{% endblock %}
