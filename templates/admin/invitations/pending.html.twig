{% extends 'base.html.twig' %}

{% block title %}Pending Invitations{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Pending Project Invitations</h1>
        <p class="mt-2 text-sm text-gray-700">Review and approve invitations for users from restricted domains</p>
    </div>

    {# Flash Messages #}
    {% for message in app.flashes('success') %}
        <div class="mb-4 rounded-md bg-green-50 p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-green-800">{{ message }}</p>
                </div>
            </div>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="mb-4 rounded-md bg-red-50 p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-red-800">{{ message }}</p>
                </div>
            </div>
        </div>
    {% endfor %}

    {# Invitations List #}
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        {% if invitations is empty %}
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
                </svg>
                <h3 class="mt-2 text-sm font-semibold text-gray-900">No pending invitations</h3>
                <p class="mt-1 text-sm text-gray-500">All invitations have been reviewed.</p>
            </div>
        {% else %}
            <ul role="list" class="divide-y divide-gray-200">
                {% for invitation in invitations %}
                    <li class="px-6 py-5">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <div class="flex items-center gap-3">
                                    <div class="flex-shrink-0">
                                        <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
                                            <svg class="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                                            </svg>
                                        </div>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <p class="text-sm font-medium text-gray-900">{{ invitation.email }}</p>
                                        <p class="text-sm text-gray-500">Domain: {{ invitation.domain }}</p>
                                    </div>
                                </div>

                                <div class="mt-3 grid grid-cols-1 gap-3 sm:grid-cols-2">
                                    <div>
                                        <p class="text-xs font-medium text-gray-500">Project</p>
                                        <p class="mt-1 text-sm text-gray-900">{{ invitation.project.name }}</p>
                                    </div>
                                    <div>
                                        <p class="text-xs font-medium text-gray-500">Role</p>
                                        <p class="mt-1 text-sm text-gray-900">{{ invitation.role.name }}</p>
                                    </div>
                                    <div>
                                        <p class="text-xs font-medium text-gray-500">Invited By</p>
                                        <p class="mt-1 text-sm text-gray-900">{{ invitation.invitedBy.fullName }}</p>
                                    </div>
                                    <div>
                                        <p class="text-xs font-medium text-gray-500">Requested</p>
                                        <p class="mt-1 text-sm text-gray-900">{{ invitation.createdAt|date('M d, Y g:i A') }}</p>
                                    </div>
                                </div>
                            </div>

                            <div class="ml-6 flex flex-col gap-2">
                                <form action="{{ path('admin_invitation_approve', {id: invitation.id}) }}" method="post" class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ invitation.id) }}">
                                    <button type="submit"
                                            class="inline-flex items-center gap-2 rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500">
                                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                                        </svg>
                                        Approve
                                    </button>
                                </form>
                                <form action="{{ path('admin_invitation_decline', {id: invitation.id}) }}" method="post" class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('decline' ~ invitation.id) }}">
                                    <button type="submit"
                                            class="inline-flex items-center gap-2 rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500">
                                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                                        </svg>
                                        Decline
                                    </button>
                                </form>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
</div>
{% endblock %}
