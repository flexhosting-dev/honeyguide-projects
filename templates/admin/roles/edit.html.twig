{% extends 'layout.html.twig' %}

{% block title %}Edit {{ role.name }} - WorkFlow{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto">
    <div class="mb-6">
        <a href="{{ path('app_admin_roles') }}" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
            <svg class="mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Back to Roles
        </a>
    </div>

    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-xl font-semibold text-gray-900">Edit Role: {{ role.name }}</h1>
                    <p class="mt-1 text-sm text-gray-500">
                        {{ role.type.value == 'portal' ? 'Portal Role' : 'Project Role' }}
                        {% if role.isSystemRole %}<span class="ml-2 text-gray-400">(System Role)</span>{% endif %}
                    </p>
                </div>
                {% if role.isSystemRole %}
                <span class="inline-flex items-center rounded-full bg-yellow-100 px-3 py-1 text-xs font-medium text-yellow-800">
                    <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    </svg>
                    System Role - Name/Type cannot be changed
                </span>
                {% endif %}
            </div>
        </div>

        <form method="post" action="{{ path('app_admin_roles_edit', {id: role.id}) }}" class="p-6 space-y-6">
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700">Role Name</label>
                    <input type="text" name="name" id="name" required
                           value="{{ role.name }}"
                           {% if role.isSystemRole %}readonly{% endif %}
                           class="mt-1 block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm {% if role.isSystemRole %}bg-gray-50{% endif %}">
                </div>

                <div>
                    <label for="type" class="block text-sm font-medium text-gray-700">Role Type</label>
                    <input type="text" id="type" readonly
                           value="{{ role.type.value == 'portal' ? 'Portal Role' : 'Project Role' }}"
                           class="mt-1 block w-full rounded-md border-0 py-1.5 px-3 text-gray-500 shadow-sm ring-1 ring-inset ring-gray-300 bg-gray-50 sm:text-sm">
                </div>
            </div>

            <div>
                <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                <textarea name="description" id="description" rows="2"
                          class="mt-1 block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm"
                          placeholder="Describe what this role can do...">{{ role.description }}</textarea>
            </div>

            <div>
                <h3 class="text-sm font-medium text-gray-700 mb-4">Permissions ({{ role.permissions|length }} selected)</h3>

                <div class="space-y-6">
                    {% for module, modulePermissions in permissions %}
                    <div class="border border-gray-200 rounded-lg p-4">
                        <div class="flex items-center justify-between mb-3">
                            <h4 class="text-sm font-semibold text-gray-900 capitalize">{{ module }}</h4>
                            <button type="button" onclick="toggleModule('{{ module }}')" class="text-xs text-primary-600 hover:text-primary-800">Toggle All</button>
                        </div>
                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
                            {% for permission in modulePermissions %}
                            <label class="relative flex items-start">
                                <div class="flex h-6 items-center">
                                    <input type="checkbox" name="permissions[]" value="{{ permission }}"
                                           data-module="{{ module }}"
                                           {% if permission in role.permissions %}checked{% endif %}
                                           class="h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-600">
                                </div>
                                <div class="ml-3 text-sm leading-6">
                                    <span class="text-gray-700">{{ permissionLabels[permission] ?? permission }}</span>
                                </div>
                            </label>
                            {% endfor %}
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
                <a href="{{ path('app_admin_roles') }}" class="rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                    Cancel
                </a>
                <button type="submit" class="rounded-md bg-primary-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-500">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function toggleModule(module) {
    const checkboxes = document.querySelectorAll(`input[data-module="${module}"]`);
    const allChecked = Array.from(checkboxes).every(cb => cb.checked);
    checkboxes.forEach(cb => cb.checked = !allChecked);
}
</script>
{% endblock %}
