{% extends 'layout.html.twig' %}

{% block title %}Role Management - WorkFlow{% endblock %}

{% block content %}
<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Role Management</h1>
            <p class="mt-1 text-sm text-gray-500">Manage system and project roles with granular permissions</p>
        </div>
        {% if app.user.isPortalSuperAdmin %}
        <a href="{{ path('app_admin_roles_new') }}" class="inline-flex items-center rounded-md bg-primary-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-500">
            <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            New Role
        </a>
        {% endif %}
    </div>

    <!-- Portal Roles -->
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Portal Roles</h2>
            <p class="mt-1 text-sm text-gray-500">System-wide roles that grant access across all projects</p>
        </div>
        <div class="divide-y divide-gray-200">
            {% for role in portalRoles %}
            <div class="px-6 py-4 flex items-center justify-between">
                <div class="flex-1">
                    <div class="flex items-center">
                        <h3 class="text-sm font-medium text-gray-900">{{ role.name }}</h3>
                        {% if role.isSystemRole %}
                        <span class="ml-2 inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-600">System</span>
                        {% endif %}
                    </div>
                    <p class="mt-1 text-sm text-gray-500">{{ role.description ?? 'No description' }}</p>
                    <div class="mt-2 flex flex-wrap gap-1">
                        {% for permission in role.permissions|slice(0, 5) %}
                        <span class="inline-flex items-center rounded bg-blue-50 px-2 py-0.5 text-xs font-medium text-blue-700">{{ permission }}</span>
                        {% endfor %}
                        {% if role.permissions|length > 5 %}
                        <span class="inline-flex items-center rounded bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-600">+{{ role.permissions|length - 5 }} more</span>
                        {% endif %}
                    </div>
                </div>
                <div class="ml-4 flex items-center space-x-2">
                    {% if app.user.isPortalSuperAdmin %}
                    <a href="{{ path('app_admin_roles_edit', {id: role.id}) }}" class="text-primary-600 hover:text-primary-900 text-sm font-medium">Edit</a>
                    {% if not role.isSystemRole %}
                    <form method="post" action="{{ path('app_admin_roles_delete', {id: role.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete this role?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ role.id) }}">
                        <button type="submit" class="text-red-600 hover:text-red-900 text-sm font-medium">Delete</button>
                    </form>
                    {% endif %}
                    {% endif %}
                </div>
            </div>
            {% else %}
            <div class="px-6 py-4 text-sm text-gray-500">No portal roles defined.</div>
            {% endfor %}
        </div>
    </div>

    <!-- Project Roles -->
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Project Roles</h2>
            <p class="mt-1 text-sm text-gray-500">Roles assigned to users within specific projects</p>
        </div>
        <div class="divide-y divide-gray-200">
            {% for role in projectRoles %}
            <div class="px-6 py-4 flex items-center justify-between">
                <div class="flex-1">
                    <div class="flex items-center">
                        <h3 class="text-sm font-medium text-gray-900">{{ role.name }}</h3>
                        {% if role.isSystemRole %}
                        <span class="ml-2 inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-600">System</span>
                        {% endif %}
                    </div>
                    <p class="mt-1 text-sm text-gray-500">{{ role.description ?? 'No description' }}</p>
                    <div class="mt-2 flex flex-wrap gap-1">
                        {% for permission in role.permissions|slice(0, 5) %}
                        <span class="inline-flex items-center rounded bg-green-50 px-2 py-0.5 text-xs font-medium text-green-700">{{ permission }}</span>
                        {% endfor %}
                        {% if role.permissions|length > 5 %}
                        <span class="inline-flex items-center rounded bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-600">+{{ role.permissions|length - 5 }} more</span>
                        {% endif %}
                    </div>
                </div>
                <div class="ml-4 flex items-center space-x-2">
                    {% if app.user.isPortalSuperAdmin %}
                    <a href="{{ path('app_admin_roles_edit', {id: role.id}) }}" class="text-primary-600 hover:text-primary-900 text-sm font-medium">Edit</a>
                    {% if not role.isSystemRole %}
                    <form method="post" action="{{ path('app_admin_roles_delete', {id: role.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete this role?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ role.id) }}">
                        <button type="submit" class="text-red-600 hover:text-red-900 text-sm font-medium">Delete</button>
                    </form>
                    {% endif %}
                    {% endif %}
                </div>
            </div>
            {% else %}
            <div class="px-6 py-4 text-sm text-gray-500">No project roles defined.</div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
