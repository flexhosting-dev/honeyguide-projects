{% extends 'layout.html.twig' %}

{% block title %}Profile - WorkFlow{% endblock %}

{% block content %}
<div class="max-w-6xl mx-auto lg:flex lg:gap-8">
    {# Left Column - Profile Card & Navigation (sticky on desktop) #}
    <div class="lg:w-80 lg:flex-shrink-0 mb-6 lg:mb-0">
        <div class="lg:sticky lg:top-20 space-y-4">
            {# Profile Card #}
            <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
                <div class="bg-gradient-to-r from-emerald-50 via-cyan-50 to-sky-50 px-6 py-6">
                    {# Avatar Upload Component #}
                    <div class="flex flex-col items-center">
                        <div class="relative group" id="avatar-container">
                            <div class="w-24 h-24 rounded-full overflow-hidden ring-4 ring-white shadow-lg">
                                {% if app.user.avatar %}
                                    <img src="/uploads/avatars/{{ app.user.avatar }}"
                                         alt="{{ app.user.fullName }}"
                                         class="w-full h-full object-cover"
                                         id="avatar-image">
                                {% else %}
                                    <div class="w-full h-full bg-gradient-to-br from-emerald-400 to-cyan-500 flex items-center justify-center" id="avatar-initials">
                                        <span class="text-3xl font-bold text-white">{{ app.user.initials }}</span>
                                    </div>
                                {% endif %}
                            </div>
                            {# Hover overlay #}
                            <div class="absolute inset-0 w-24 h-24 rounded-full bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer flex items-center justify-center"
                                 onclick="document.getElementById('avatar-input').click()">
                                <div class="text-center text-white">
                                    <svg class="w-6 h-6 mx-auto mb-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    </svg>
                                    <span class="text-xs font-medium">Change</span>
                                </div>
                            </div>
                            <input type="file" id="avatar-input" class="hidden" accept="image/jpeg,image/png,image/gif,image/webp">
                            {% if app.user.avatar %}
                            <button type="button" id="remove-avatar-btn"
                                    class="absolute -bottom-1 -right-1 w-7 h-7 bg-red-500 hover:bg-red-600 text-white rounded-full shadow-lg flex items-center justify-center transition-colors"
                                    title="Remove photo">
                                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                </svg>
                            </button>
                            {% endif %}
                        </div>

                        {# User Info #}
                        <div class="mt-4 text-center">
                            <h1 class="text-xl font-bold text-gray-900" id="header-fullname">{{ app.user.fullName }}</h1>
                            <div class="mt-1 text-gray-600 text-sm">
                                {% if app.user.jobTitle or app.user.department %}
                                    <span id="header-jobtitle">{{ app.user.jobTitle|default('') }}</span>
                                    {% if app.user.jobTitle and app.user.department %}
                                        <span class="text-gray-400">Â·</span>
                                    {% endif %}
                                    <span id="header-department">{{ app.user.department|default('') }}</span>
                                {% else %}
                                    <span class="text-gray-400 text-sm">No title set</span>
                                {% endif %}
                            </div>
                            <div class="mt-1 text-gray-500 text-xs">{{ app.user.email }}</div>
                        </div>

                        {# Badges #}
                        <div class="mt-3 flex flex-wrap items-center justify-center gap-2">
                            {% if app.user.portalRole %}
                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-cyan-100 text-cyan-700">
                                {{ app.user.portalRole.name }}
                            </span>
                            {% endif %}
                            {% if app.user.isVerified %}
                            <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">
                                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                Verified
                            </span>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {# Navigation Links #}
                <nav class="px-3 py-3 border-t border-gray-100">
                    <ul class="space-y-1" id="profile-nav">
                        <li>
                            <a href="#section-profile" class="profile-nav-link flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 hover:text-primary-600 transition-colors" data-section="section-profile">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                                Profile
                            </a>
                        </li>
                        <li>
                            <a href="#section-security" class="profile-nav-link flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 hover:text-primary-600 transition-colors" data-section="section-security">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                </svg>
                                Security
                            </a>
                        </li>
                        <li>
                            <a href="#section-appearance" class="profile-nav-link flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 hover:text-primary-600 transition-colors" data-section="section-appearance">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
                                </svg>
                                Appearance
                            </a>
                        </li>
                        <li>
                            <a href="#section-account" class="profile-nav-link flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 hover:text-primary-600 transition-colors" data-section="section-account">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                                Account
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            {# Member Since (small info) #}
            <div class="hidden lg:block text-center text-xs text-gray-400">
                Member since {{ app.user.createdAt|date('M Y') }}
            </div>
        </div>
    </div>

    {# Right Column - Content Cards (scrollable) #}
    <div class="lg:flex-1 space-y-6">
            {# Personal Information Section #}
        <div id="section-profile" class="bg-white shadow rounded-xl overflow-hidden scroll-mt-20">
            <div class="px-6 py-5 border-b border-gray-100">
                <h2 class="text-lg font-semibold text-gray-900">Personal Information</h2>
            <p class="mt-1 text-sm text-gray-500">Click on any field to edit</p>
        </div>
        <div class="px-6 py-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {# First Name #}
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-500">First Name</label>
                    <div class="editable-field group" data-field="firstName">
                        <div class="flex items-center gap-2">
                            <span class="field-value text-gray-900 text-lg">{{ app.user.firstName }}</span>
                            <svg class="w-4 h-4 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity edit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                            </svg>
                        </div>
                        <input type="text" class="field-input hidden w-full px-3 py-2 border border-primary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900" value="{{ app.user.firstName }}">
                        <div class="field-error hidden text-sm text-red-600 mt-1"></div>
                    </div>
                </div>

                {# Last Name #}
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-500">Last Name</label>
                    <div class="editable-field group" data-field="lastName">
                        <div class="flex items-center gap-2">
                            <span class="field-value text-gray-900 text-lg">{{ app.user.lastName }}</span>
                            <svg class="w-4 h-4 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity edit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                            </svg>
                        </div>
                        <input type="text" class="field-input hidden w-full px-3 py-2 border border-primary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900" value="{{ app.user.lastName }}">
                        <div class="field-error hidden text-sm text-red-600 mt-1"></div>
                    </div>
                </div>

                {# Email #}
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-500">Email Address</label>
                    <div class="editable-field group" data-field="email">
                        <div class="flex items-center gap-2">
                            <span class="field-value text-gray-900 text-lg">{{ app.user.email }}</span>
                            <svg class="w-4 h-4 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity edit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                            </svg>
                        </div>
                        <input type="email" class="field-input hidden w-full px-3 py-2 border border-primary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900" value="{{ app.user.email }}">
                        <div class="field-error hidden text-sm text-red-600 mt-1"></div>
                    </div>
                </div>

                {# Job Title #}
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-500">Job Title</label>
                    <div class="editable-field group" data-field="jobTitle">
                        <div class="flex items-center gap-2">
                            <span class="field-value text-gray-900 text-lg {% if not app.user.jobTitle %}text-gray-400 italic{% endif %}">{{ app.user.jobTitle|default('Add job title') }}</span>
                            <svg class="w-4 h-4 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity edit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                            </svg>
                        </div>
                        <input type="text" class="field-input hidden w-full px-3 py-2 border border-primary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900" value="{{ app.user.jobTitle }}" placeholder="e.g. Software Engineer">
                        <div class="field-error hidden text-sm text-red-600 mt-1"></div>
                    </div>
                </div>

                {# Department #}
                <div class="space-y-2 md:col-span-2">
                    <label class="block text-sm font-medium text-gray-500">Department</label>
                    <div class="editable-field group" data-field="department">
                        <div class="flex items-center gap-2">
                            <span class="field-value text-gray-900 text-lg {% if not app.user.department %}text-gray-400 italic{% endif %}">{{ app.user.department|default('Add department') }}</span>
                            <svg class="w-4 h-4 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity edit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                            </svg>
                        </div>
                        <input type="text" class="field-input hidden w-full px-3 py-2 border border-primary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900" value="{{ app.user.department }}" placeholder="e.g. Engineering">
                        <div class="field-error hidden text-sm text-red-600 mt-1"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

        {# Security Section #}
        <div id="section-security" class="bg-white shadow rounded-xl overflow-hidden scroll-mt-20">
            <div class="px-6 py-5 border-b border-gray-100">
                <h2 class="text-lg font-semibold text-gray-900">Security</h2>
            <p class="mt-1 text-sm text-gray-500">Manage your password and connected accounts</p>
        </div>
        <div class="divide-y divide-gray-100">
            {# Password #}
            <div class="px-6 py-5 flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-900">Password</h3>
                        <p class="text-sm text-gray-500">
                            {% if app.user.password %}
                                Last changed {{ app.user.updatedAt|date('M d, Y') }}
                            {% else %}
                                No password set (using Google login only)
                            {% endif %}
                        </p>
                    </div>
                </div>
                <button type="button" onclick="openPasswordModal()"
                        class="px-4 py-2 text-sm font-medium text-primary-600 hover:text-primary-700 hover:bg-primary-50 rounded-lg transition-colors">
                    {% if app.user.password %}Change Password{% else %}Set Password{% endif %}
                </button>
            </div>

            {# Google Account #}
            <div class="px-6 py-5 flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center">
                        <svg class="w-5 h-5" viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-900">Google Account</h3>
                        <p class="text-sm text-gray-500">
                            {% if app.user.googleId %}
                                Connected
                            {% else %}
                                Not connected
                            {% endif %}
                        </p>
                    </div>
                </div>
                {% if app.user.googleId %}
                    <button type="button" onclick="disconnectGoogle()" id="disconnect-google-btn"
                            class="px-4 py-2 text-sm font-medium text-red-600 hover:text-red-700 hover:bg-red-50 rounded-lg transition-colors">
                        Disconnect
                    </button>
                {% else %}
                    <a href="{{ path('connect_google_start') }}"
                       class="px-4 py-2 text-sm font-medium text-primary-600 hover:text-primary-700 hover:bg-primary-50 rounded-lg transition-colors">
                        Connect
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

        {# Appearance Section #}
        <div id="section-appearance" class="bg-white shadow rounded-xl overflow-hidden scroll-mt-20">
            <div class="px-6 py-5 border-b border-gray-100">
                <h2 class="text-lg font-semibold text-gray-900">Appearance</h2>
            <p class="mt-1 text-sm text-gray-500">Customize the look and feel of your workspace</p>
        </div>
        <div class="px-6 py-6">
            <h3 class="text-sm font-medium text-gray-700 mb-4">Sidebar & Header Theme</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4" id="theme-options">
                {# Gradient Theme #}
                <label class="theme-option relative cursor-pointer group" data-theme="gradient">
                    <input type="radio" name="ui_theme" value="gradient" class="sr-only" {{ app.user.uiTheme == 'gradient' ? 'checked' : '' }}>
                    <div class="border-2 rounded-xl overflow-hidden transition-all {{ app.user.uiTheme == 'gradient' ? 'border-primary-500 ring-2 ring-primary-200' : 'border-gray-200 hover:border-gray-300' }}">
                        {# Theme Preview #}
                        <div class="flex h-28">
                            {# Sidebar Preview #}
                            <div class="w-16 bg-gradient-to-b from-primary-600 via-primary-700 to-indigo-800 p-2 flex flex-col gap-1.5">
                                <div class="w-full h-3 bg-white/20 rounded"></div>
                                <div class="w-full h-2 bg-white/10 rounded mt-2"></div>
                                <div class="w-full h-2 bg-white/10 rounded"></div>
                                <div class="w-full h-2 bg-white/10 rounded"></div>
                            </div>
                            {# Content Preview #}
                            <div class="flex-1 flex flex-col">
                                {# Header Preview #}
                                <div class="h-6 bg-gradient-to-r from-primary-600 via-primary-500 to-indigo-500 flex items-center px-2">
                                    <div class="w-12 h-2 bg-white/30 rounded"></div>
                                    <div class="ml-auto w-4 h-4 bg-white/20 rounded-full"></div>
                                </div>
                                {# Content Area #}
                                <div class="flex-1 bg-gradient-to-br from-emerald-50 via-cyan-50 to-sky-50 p-2">
                                    <div class="w-full h-2 bg-gray-200 rounded mb-1.5"></div>
                                    <div class="w-3/4 h-2 bg-gray-200 rounded"></div>
                                </div>
                            </div>
                        </div>
                        {# Label #}
                        <div class="px-3 py-2.5 bg-gray-50 border-t border-gray-100 flex items-center justify-between">
                            <div>
                                <span class="text-sm font-medium text-gray-900">Vibrant Gradient</span>
                                <p class="text-xs text-gray-500">Colorful and modern</p>
                            </div>
                            <div class="theme-check w-5 h-5 rounded-full bg-primary-500 text-white items-center justify-center {{ app.user.uiTheme == 'gradient' ? 'flex' : 'hidden' }}">
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                </label>

                {# Classic Theme #}
                <label class="theme-option relative cursor-pointer group" data-theme="classic">
                    <input type="radio" name="ui_theme" value="classic" class="sr-only" {{ app.user.uiTheme == 'classic' ? 'checked' : '' }}>
                    <div class="border-2 rounded-xl overflow-hidden transition-all {{ app.user.uiTheme == 'classic' ? 'border-primary-500 ring-2 ring-primary-200' : 'border-gray-200 hover:border-gray-300' }}">
                        {# Theme Preview #}
                        <div class="flex h-28">
                            {# Sidebar Preview #}
                            <div class="w-16 bg-white border-r border-gray-200 p-2 flex flex-col gap-1.5">
                                <div class="w-full h-3 bg-gray-200 rounded"></div>
                                <div class="w-full h-2 bg-gray-100 rounded mt-2"></div>
                                <div class="w-full h-2 bg-primary-100 rounded"></div>
                                <div class="w-full h-2 bg-gray-100 rounded"></div>
                            </div>
                            {# Content Preview #}
                            <div class="flex-1 flex flex-col">
                                {# Header Preview #}
                                <div class="h-6 bg-white border-b border-gray-200 flex items-center px-2">
                                    <div class="w-12 h-2 bg-gray-300 rounded"></div>
                                    <div class="ml-auto w-4 h-4 bg-primary-100 rounded-full"></div>
                                </div>
                                {# Content Area #}
                                <div class="flex-1 bg-gradient-to-br from-emerald-50 via-cyan-50 to-sky-50 p-2">
