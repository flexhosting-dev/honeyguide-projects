{% extends 'layout.html.twig' %}

{% block title %}Profile - WorkFlow{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto space-y-6">
    {# Profile Header with soft gradient background #}
    <div class="bg-gradient-to-r from-emerald-50 via-cyan-50 to-sky-50 border border-gray-200/60 rounded-xl shadow-sm overflow-hidden">
        <div class="px-6 py-8 sm:px-8 sm:py-10">
            <div class="flex flex-col sm:flex-row items-center sm:items-start gap-6">
                {# Avatar Upload Component #}
                <div class="relative group" id="avatar-container">
                    <div class="w-28 h-28 sm:w-32 sm:h-32 rounded-full overflow-hidden ring-4 ring-white shadow-lg">
                        {% if app.user.avatar %}
                            <img src="/uploads/avatars/{{ app.user.avatar }}"
                                 alt="{{ app.user.fullName }}"
                                 class="w-full h-full object-cover"
                                 id="avatar-image">
                        {% else %}
                            <div class="w-full h-full bg-gradient-to-br from-emerald-400 to-cyan-500 flex items-center justify-center" id="avatar-initials">
                                <span class="text-4xl sm:text-5xl font-bold text-white">{{ app.user.initials }}</span>
                            </div>
                        {% endif %}
                    </div>
                    {# Hover overlay #}
                    <div class="absolute inset-0 w-28 h-28 sm:w-32 sm:h-32 rounded-full bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer flex items-center justify-center"
                         onclick="document.getElementById('avatar-input').click()">
                        <div class="text-center text-white">
                            <svg class="w-8 h-8 mx-auto mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            <span class="text-xs font-medium">Change</span>
                        </div>
                    </div>
                    <input type="file" id="avatar-input" class="hidden" accept="image/jpeg,image/png,image/gif,image/webp">
                    {% if app.user.avatar %}
                    <button type="button" id="remove-avatar-btn"
                            class="absolute -bottom-1 -right-1 w-8 h-8 bg-red-500 hover:bg-red-600 text-white rounded-full shadow-lg flex items-center justify-center transition-colors"
                            title="Remove photo">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                    {% endif %}
                </div>

                {# User Info #}
                <div class="flex-1 text-center sm:text-left">
                    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900" id="header-fullname">{{ app.user.fullName }}</h1>
                    <div class="mt-2 flex flex-wrap items-center justify-center sm:justify-start gap-2 text-gray-600 text-sm">
                        {% if app.user.jobTitle or app.user.department %}
                            <span id="header-jobtitle">{{ app.user.jobTitle|default('No job title') }}</span>
                            {% if app.user.jobTitle and app.user.department %}
                                <span class="text-gray-400">Â·</span>
                            {% endif %}
                            <span id="header-department">{{ app.user.department|default('') }}</span>
                        {% else %}
                            <span class="text-gray-400">Add your job title and department below</span>
                        {% endif %}
                    </div>
                    <div class="mt-1 text-gray-500 text-sm">{{ app.user.email }}</div>
                    <div class="mt-3 flex flex-wrap items-center justify-center sm:justify-start gap-2">
                        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-white/70 text-gray-600 border border-gray-200/60">
                            Member since {{ app.user.createdAt|date('M Y') }}
                        </span>
                        {% if app.user.portalRole %}
                        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-cyan-100 text-cyan-700">
                            {{ app.user.portalRole.name }}
                        </span>
                        {% endif %}
                        {% if app.user.isVerified %}
                        <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">
                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                            Verified
                        </span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Personal Information Section #}
    <div class="bg-white shadow rounded-xl overflow-hidden">
        <div class="px-6 py-5 border-b border-gray-100">
            <h2 class="text-lg font-semibold text-gray-900">Personal Information</h2>
            <p class="mt-1 text-sm text-gray-500">Click on any field to edit</p>
        </div>
        <div class="px-6 py-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {# First Name #}
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-500">First Name</label>
                    <div class="editable-field group" data-field="firstName">
                        <div class="flex items-center gap-2">
                            <span class="field-value text-gray-900 text-lg">{{ app.user.firstName }}</span>
                            <svg class="w-4 h-4 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity edit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                            </svg>
                        </div>
                        <input type="text" class="field-input hidden w-full px-3 py-2 border border-primary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900" value="{{ app.user.firstName }}">
                        <div class="field-error hidden text-sm text-red-600 mt-1"></div>
                    </div>
                </div>

                {# Last Name #}
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-500">Last Name</label>
                    <div class="editable-field group" data-field="lastName">
                        <div class="flex items-center gap-2">
                            <span class="field-value text-gray-900 text-lg">{{ app.user.lastName }}</span>
                            <svg class="w-4 h-4 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity edit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                            </svg>
                        </div>
                        <input type="text" class="field-input hidden w-full px-3 py-2 border border-primary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900" value="{{ app.user.lastName }}">
                        <div class="field-error hidden text-sm text-red-600 mt-1"></div>
                    </div>
                </div>

                {# Email #}
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-500">Email Address</label>
                    <div class="editable-field group" data-field="email">
                        <div class="flex items-center gap-2">
                            <span class="field-value text-gray-900 text-lg">{{ app.user.email }}</span>
                            <svg class="w-4 h-4 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity edit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                            </svg>
                        </div>
                        <input type="email" class="field-input hidden w-full px-3 py-2 border border-primary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900" value="{{ app.user.email }}">
                        <div class="field-error hidden text-sm text-red-600 mt-1"></div>
                    </div>
                </div>

                {# Job Title #}
                <div class="space-y-2">
                    <label class="block text-sm font-medium text-gray-500">Job Title</label>
                    <div class="editable-field group" data-field="jobTitle">
                        <div class="flex items-center gap-2">
                            <span class="field-value text-gray-900 text-lg {% if not app.user.jobTitle %}text-gray-400 italic{% endif %}">{{ app.user.jobTitle|default('Add job title') }}</span>
                            <svg class="w-4 h-4 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity edit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                            </svg>
                        </div>
                        <input type="text" class="field-input hidden w-full px-3 py-2 border border-primary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900" value="{{ app.user.jobTitle }}" placeholder="e.g. Software Engineer">
                        <div class="field-error hidden text-sm text-red-600 mt-1"></div>
                    </div>
                </div>

                {# Department #}
                <div class="space-y-2 md:col-span-2">
                    <label class="block text-sm font-medium text-gray-500">Department</label>
                    <div class="editable-field group" data-field="department">
                        <div class="flex items-center gap-2">
                            <span class="field-value text-gray-900 text-lg {% if not app.user.department %}text-gray-400 italic{% endif %}">{{ app.user.department|default('Add department') }}</span>
                            <svg class="w-4 h-4 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity edit-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                            </svg>
                        </div>
                        <input type="text" class="field-input hidden w-full px-3 py-2 border border-primary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900" value="{{ app.user.department }}" placeholder="e.g. Engineering">
                        <div class="field-error hidden text-sm text-red-600 mt-1"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Security Section #}
    <div class="bg-white shadow rounded-xl overflow-hidden">
        <div class="px-6 py-5 border-b border-gray-100">
            <h2 class="text-lg font-semibold text-gray-900">Security</h2>
            <p class="mt-1 text-sm text-gray-500">Manage your password and connected accounts</p>
        </div>
        <div class="divide-y divide-gray-100">
            {# Password #}
            <div class="px-6 py-5 flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-900">Password</h3>
                        <p class="text-sm text-gray-500">
                            {% if app.user.password %}
                                Last changed {{ app.user.updatedAt|date('M d, Y') }}
                            {% else %}
                                No password set (using Google login only)
                            {% endif %}
                        </p>
                    </div>
                </div>
                <button type="button" onclick="openPasswordModal()"
                        class="px-4 py-2 text-sm font-medium text-primary-600 hover:text-primary-700 hover:bg-primary-50 rounded-lg transition-colors">
                    {% if app.user.password %}Change Password{% else %}Set Password{% endif %}
                </button>
            </div>

            {# Google Account #}
            <div class="px-6 py-5 flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center">
                        <svg class="w-5 h-5" viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-900">Google Account</h3>
                        <p class="text-sm text-gray-500">
                            {% if app.user.googleId %}
                                Connected
                            {% else %}
                                Not connected
                            {% endif %}
                        </p>
                    </div>
                </div>
                {% if app.user.googleId %}
                    <button type="button" onclick="disconnectGoogle()" id="disconnect-google-btn"
                            class="px-4 py-2 text-sm font-medium text-red-600 hover:text-red-700 hover:bg-red-50 rounded-lg transition-colors">
                        Disconnect
                    </button>
                {% else %}
                    <a href="{{ path('connect_google_start') }}"
                       class="px-4 py-2 text-sm font-medium text-primary-600 hover:text-primary-700 hover:bg-primary-50 rounded-lg transition-colors">
                        Connect
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    {# Account Information Section #}
    <div class="bg-white shadow rounded-xl overflow-hidden">
        <div class="px-6 py-5 border-b border-gray-100">
            <h2 class="text-lg font-semibold text-gray-900">Account Information</h2>
        </div>
        <div class="px-6 py-4 divide-y divide-gray-100">
            <div class="py-3 flex justify-between items-center">
                <span class="text-sm text-gray-500">Status</span>
                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">
                    <span class="w-1.5 h-1.5 rounded-full bg-green-500"></span>
                    {% if app.user.isVerified %}Verified{% else %}Active{% endif %}
                </span>
            </div>
            {% if app.user.portalRole %}
            <div class="py-3 flex justify-between items-center">
                <span class="text-sm text-gray-500">Portal Role</span>
                <span class="text-sm font-medium text-gray-900">{{ app.user.portalRole.name }}</span>
            </div>
            {% endif %}
            <div class="py-3 flex justify-between items-center">
                <span class="text-sm text-gray-500">Created</span>
                <span class="text-sm text-gray-900">{{ app.user.createdAt|date('F d, Y') }}</span>
            </div>
            <div class="py-3 flex justify-between items-center">
                <span class="text-sm text-gray-500">Last Updated</span>
                <span class="text-sm text-gray-900">{{ app.user.updatedAt|date('F d, Y') }}</span>
            </div>
        </div>
    </div>
</div>

{# Password Modal #}
<div id="password-modal" class="fixed inset-0 z-50 hidden overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
        <div class="fixed inset-0 bg-gray-500/75 transition-opacity" onclick="closePasswordModal()"></div>
        <div class="relative transform overflow-hidden rounded-xl bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
            <form id="password-form" onsubmit="submitPasswordForm(event)">
                <div class="bg-white px-6 py-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        {% if app.user.password %}Change Password{% else %}Set Password{% endif %}
                    </h3>
                    <div class="space-y-4">
                        {% if app.user.password %}
                        <div>
                            <label for="modal-current-password" class="block text-sm font-medium text-gray-700">Current Password</label>
                            <input type="password" name="current_password" id="modal-current-password" required
                                   class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                        </div>
                        {% else %}
                        <input type="hidden" name="current_password" value="skip">
                        {% endif %}
                        <div>
                            <label for="modal-new-password" class="block text-sm font-medium text-gray-700">New Password</label>
                            <input type="password" name="new_password" id="modal-new-password" required minlength="8"
                                   class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                            <p class="mt-1 text-xs text-gray-500">Minimum 8 characters</p>
                        </div>
                        <div>
                            <label for="modal-confirm-password" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                            <input type="password" name="confirm_password" id="modal-confirm-password" required minlength="8"
                                   class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                        </div>
                        <div id="password-error" class="hidden text-sm text-red-600 bg-red-50 px-3 py-2 rounded-lg"></div>
                    </div>
                </div>
                <div class="bg-gray-50 px-6 py-4 flex justify-end gap-3">
                    <button type="button" onclick="closePasswordModal()"
                            class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
                        Cancel
                    </button>
                    <button type="submit" id="password-submit-btn"
                            class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700 disabled:opacity-50">
                        {% if app.user.password %}Update Password{% else %}Set Password{% endif %}
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

{# Toast Notification #}
<div id="toast" class="fixed bottom-4 right-4 z-50 hidden transform transition-all duration-300 translate-y-2 opacity-0">
    <div class="flex items-center gap-2 px-4 py-3 rounded-lg shadow-lg" id="toast-content">
        <span id="toast-icon"></span>
        <span id="toast-message" class="text-sm font-medium"></span>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Inline editing for fields
    document.querySelectorAll('.editable-field').forEach(function(container) {
        const field = container.dataset.field;
        const valueEl = container.querySelector('.field-value');
        const inputEl = container.querySelector('.field-input');
        const errorEl = container.querySelector('.field-error');
        const editIcon = container.querySelector('.edit-icon');
        let originalValue = inputEl.value;

        // Click to edit
        valueEl.parentElement.addEventListener('click', function() {
            startEditing();
        });

        function startEditing() {
            valueEl.parentElement.classList.add('hidden');
            inputEl.classList.remove('hidden');
            inputEl.focus();
            inputEl.select();
        }

        function stopEditing(save = true) {
            if (save && inputEl.value !== originalValue) {
                saveField();
            } else {
                inputEl.value = originalValue;
                valueEl.parentElement.classList.remove('hidden');
                inputEl.classList.add('hidden');
                errorEl.classList.add('hidden');
            }
        }

        async function saveField() {
            const newValue = inputEl.value.trim();

            try {
                const response = await fetch('{{ path("app_profile_update_field") }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        field: field,
                        value: newValue
                    })
                });

                const data = await response.json();

                if (data.success) {
                    originalValue = newValue;

                    // Update display value
                    if (newValue) {
                        valueEl.textContent = newValue;
                        valueEl.classList.remove('text-gray-400', 'italic');
                    } else {
                        valueEl.textContent = 'Add ' + field.replace(/([A-Z])/g, ' $1').toLowerCase();
                        valueEl.classList.add('text-gray-400', 'italic');
                    }

                    // Update header if name changed
                    if (field === 'firstName' || field === 'lastName') {
                        updateHeaderName();
                    }
                    if (field === 'jobTitle') {
                        const headerJobTitle = document.getElementById('header-jobtitle');
                        if (headerJobTitle) headerJobTitle.textContent = newValue || 'No job title';
                    }
                    if (field === 'department') {
                        const headerDept = document.getElementById('header-department');
                        if (headerDept) headerDept.textContent = newValue;
                    }

                    showToast('Saved', 'success');
                    valueEl.parentElement.classList.remove('hidden');
                    inputEl.classList.add('hidden');
                    errorEl.classList.add('hidden');
                } else {
                    errorEl.textContent = data.error || 'Failed to save';
                    errorEl.classList.remove('hidden');
                    showToast(data.error || 'Failed to save', 'error');
                }
            } catch (error) {
                errorEl.textContent = 'Network error. Please try again.';
                errorEl.classList.remove('hidden');
                showToast('Network error', 'error');
            }
        }

        function updateHeaderName() {
            const firstName = document.querySelector('[data-field="firstName"] .field-input').value;
            const lastName = document.querySelector('[data-field="lastName"] .field-input').value;
            const headerName = document.getElementById('header-fullname');
            if (headerName) {
                headerName.textContent = firstName + ' ' + lastName;
            }
        }

        inputEl.addEventListener('blur', function() {
            stopEditing(true);
        });

        inputEl.addEventListener('keydown', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                inputEl.blur();
            } else if (e.key === 'Escape') {
                stopEditing(false);
            }
        });
    });

    // Avatar upload
    const avatarInput = document.getElementById('avatar-input');
    if (avatarInput) {
        avatarInput.addEventListener('change', async function(e) {
            console.log('File selected:', e.target.files);
            const file = e.target.files[0];
            if (!file) {
                console.log('No file selected');
                return;
            }
            console.log('Uploading file:', file.name, file.type, file.size);

            // Validate file size (2MB)
            if (file.size > 2 * 1024 * 1024) {
                showToast('File is too large. Maximum size is 2MB.', 'error');
                return;
            }

            // Validate file type
            if (!['image/jpeg', 'image/png', 'image/gif', 'image/webp'].includes(file.type)) {
                showToast('Invalid file type. Please upload a JPEG, PNG, GIF, or WebP image.', 'error');
                return;
            }

            const formData = new FormData();
            formData.append('avatar', file);

            try {
                console.log('Sending upload request...');
                const response = await fetch('{{ path("app_profile_avatar_upload") }}', {
                    method: 'POST',
                    body: formData,
                    credentials: 'same-origin'
                });
                console.log('Response status:', response.status);

                if (!response.ok) {
                    const text = await response.text();
                    console.error('Upload failed:', response.status, text);
                    showToast('Upload failed: ' + response.status, 'error');
                    return;
                }

                const data = await response.json();
                console.log('Response data:', data);

                if (data.success) {
                    // Update avatar display
                    const container = document.getElementById('avatar-container');
                    const imgContainer = container.querySelector('.ring-4');
                    imgContainer.innerHTML = `
                        <img src="${data.avatar}" alt="Avatar" class="w-full h-full object-cover" id="avatar-image">
                    `;

                    // Add remove button if not present
                    if (!document.getElementById('remove-avatar-btn')) {
                        const removeBtn = document.createElement('button');
                        removeBtn.type = 'button';
                        removeBtn.id = 'remove-avatar-btn';
                        removeBtn.className = 'absolute -bottom-1 -right-1 w-8 h-8 bg-red-500 hover:bg-red-600 text-white rounded-full shadow-lg flex items-center justify-center transition-colors';
                        removeBtn.title = 'Remove photo';
                        removeBtn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>';
                        removeBtn.onclick = removeAvatar;
                        container.appendChild(removeBtn);
                    }

                    showToast('Avatar updated', 'success');
                } else {
                    showToast(data.error || 'Failed to upload avatar', 'error');
                }
            } catch (error) {
                showToast('Network error. Please try again.', 'error');
            }

            // Reset input
            avatarInput.value = '';
        });
    }

    // Remove avatar
    const removeAvatarBtn = document.getElementById('remove-avatar-btn');
    if (removeAvatarBtn) {
        removeAvatarBtn.addEventListener('click', removeAvatar);
    }
});

async function removeAvatar() {
    if (!confirm('Are you sure you want to remove your profile photo?')) return;

    try {
        const response = await fetch('{{ path("app_profile_avatar_delete") }}', {
            method: 'DELETE',
            credentials: 'same-origin'
        });

        if (!response.ok) {
            const text = await response.text();
            console.error('Delete failed:', response.status, text);
            showToast('Failed to remove avatar', 'error');
            return;
        }

        const data = await response.json();

        if (data.success) {
            // Update avatar display to show initials
            const container = document.getElementById('avatar-container');
            const imgContainer = container.querySelector('.ring-4');
            imgContainer.innerHTML = `
                <div class="w-full h-full bg-gradient-to-br from-emerald-400 to-cyan-500 flex items-center justify-center" id="avatar-initials">
                    <span class="text-4xl sm:text-5xl font-bold text-white">${data.initials}</span>
                </div>
            `;

            // Remove the remove button
            const removeBtn = document.getElementById('remove-avatar-btn');
            if (removeBtn) removeBtn.remove();

            showToast('Avatar removed', 'success');
        } else {
            showToast(data.error || 'Failed to remove avatar', 'error');
        }
    } catch (error) {
        showToast('Network error. Please try again.', 'error');
    }
}

function openPasswordModal() {
    document.getElementById('password-modal').classList.remove('hidden');
    document.getElementById('password-error').classList.add('hidden');
    document.getElementById('password-form').reset();
}

function closePasswordModal() {
    document.getElementById('password-modal').classList.add('hidden');
}

async function submitPasswordForm(e) {
    e.preventDefault();

    const form = document.getElementById('password-form');
    const formData = new FormData(form);
    const submitBtn = document.getElementById('password-submit-btn');
    const errorEl = document.getElementById('password-error');

    submitBtn.disabled = true;
    submitBtn.textContent = 'Saving...';

    try {
        const response = await fetch('{{ path("app_profile_password") }}', {
            method: 'POST',
            headers: {
                'Accept': 'application/json'
            },
            body: formData
        });

        const data = await response.json();

        if (data.success) {
            closePasswordModal();
            showToast('Password updated successfully', 'success');
        } else {
            errorEl.textContent = data.error || 'Failed to update password';
            errorEl.classList.remove('hidden');
        }
    } catch (error) {
        errorEl.textContent = 'Network error. Please try again.';
        errorEl.classList.remove('hidden');
    } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = '{% if app.user.password %}Update Password{% else %}Set Password{% endif %}';
    }
}

async function disconnectGoogle() {
    if (!confirm('Are you sure you want to disconnect your Google account? You will need to use your password to log in.')) return;

    const btn = document.getElementById('disconnect-google-btn');
    btn.disabled = true;
    btn.textContent = 'Disconnecting...';

    try {
        const response = await fetch('{{ path("app_profile_disconnect_google") }}', {
            method: 'POST',
            headers: {
                'Accept': 'application/json'
            }
        });

        const data = await response.json();

        if (data.success) {
            showToast('Google account disconnected', 'success');
            setTimeout(() => window.location.reload(), 1000);
        } else {
            showToast(data.error || 'Failed to disconnect', 'error');
            btn.disabled = false;
            btn.textContent = 'Disconnect';
        }
    } catch (error) {
        showToast('Network error. Please try again.', 'error');
        btn.disabled = false;
        btn.textContent = 'Disconnect';
    }
}

function showToast(message, type = 'success') {
    const toast = document.getElementById('toast');
    const content = document.getElementById('toast-content');
    const icon = document.getElementById('toast-icon');
    const msgEl = document.getElementById('toast-message');

    // Set colors and icon based on type
    if (type === 'success') {
        content.className = 'flex items-center gap-2 px-4 py-3 rounded-lg shadow-lg bg-green-600 text-white';
        icon.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>';
    } else {
        content.className = 'flex items-center gap-2 px-4 py-3 rounded-lg shadow-lg bg-red-600 text-white';
        icon.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>';
    }

    msgEl.textContent = message;

    // Show toast
    toast.classList.remove('hidden');
    setTimeout(() => {
        toast.classList.remove('translate-y-2', 'opacity-0');
    }, 10);

    // Hide after 3 seconds
    setTimeout(() => {
        toast.classList.add('translate-y-2', 'opacity-0');
        setTimeout(() => {
            toast.classList.add('hidden');
        }, 300);
    }, 3000);
}
