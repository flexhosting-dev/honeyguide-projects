<script>
function initProfilePage() {
    const themeOptions = document.getElementById('theme-options');
    if (!themeOptions || themeOptions.dataset.initialized) return;
    themeOptions.dataset.initialized = 'true';

    // Profile navigation smooth scroll and active state
    const profileNav = document.getElementById('profile-nav');
    if (profileNav) {
        const navLinks = profileNav.querySelectorAll('.profile-nav-link');
        const sections = ['section-profile', 'section-security', 'section-appearance', 'section-account'];

        // Smooth scroll on click
        navLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const targetId = this.getAttribute('data-section');
                const targetEl = document.getElementById(targetId);
                if (targetEl) {
                    targetEl.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    // Update active state
                    setActiveNavLink(targetId);
                }
            });
        });

        // Update active link on scroll
        function setActiveNavLink(sectionId) {
            navLinks.forEach(link => {
                const linkSection = link.getAttribute('data-section');
                if (linkSection === sectionId) {
                    link.classList.add('bg-primary-50', 'text-primary-600');
                    link.querySelector('svg').classList.remove('text-gray-400');
                    link.querySelector('svg').classList.add('text-primary-500');
                } else {
                    link.classList.remove('bg-primary-50', 'text-primary-600');
                    link.querySelector('svg').classList.add('text-gray-400');
                    link.querySelector('svg').classList.remove('text-primary-500');
                }
            });
        }

        // Intersection observer for scroll-based active state
        const observerOptions = {
            root: null,
            rootMargin: '-20% 0px -60% 0px',
            threshold: 0
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    setActiveNavLink(entry.target.id);
                }
            });
        }, observerOptions);

        sections.forEach(sectionId => {
            const section = document.getElementById(sectionId);
            if (section) observer.observe(section);
        });

        // Set initial active state
        setActiveNavLink('section-profile');
    }

    // Theme selection
    let themeSaving = false;
    async function selectTheme(theme) {
        if (themeSaving) return;

        // Check if already selected
        const currentTheme = document.querySelector('.theme-option input[type="radio"]:checked')?.value;
        if (currentTheme === theme) return;

        themeSaving = true;

        // Update UI immediately
        document.querySelectorAll('.theme-option').forEach(opt => {
            const border = opt.querySelector('.border-2');
            const check = opt.querySelector('.theme-check');
            const radio = opt.querySelector('input[type="radio"]');
            if (opt.dataset.theme === theme) {
                border.classList.remove('border-gray-200', 'hover:border-gray-300');
                border.classList.add('border-primary-500', 'ring-2', 'ring-primary-200');
                check.classList.remove('hidden');
                check.classList.add('flex');
                radio.checked = true;
            } else {
                border.classList.add('border-gray-200', 'hover:border-gray-300');
                border.classList.remove('border-primary-500', 'ring-2', 'ring-primary-200');
                check.classList.add('hidden');
                check.classList.remove('flex');
                radio.checked = false;
            }
        });

        // Save to server
        try {
            const response = await fetch('{{ path("app_profile_theme") }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ theme: theme })
            });

            const data = await response.json();

            if (data.success) {
                showToast('Applying theme...', 'success');
                // Reload to apply the theme
                window.location.reload();
            } else {
                showToast(data.error || 'Failed to save theme', 'error');
                themeSaving = false;
            }
        } catch (error) {
            console.error('Theme update error:', error);
            showToast('Network error. Please try again.', 'error');
            themeSaving = false;
        }
    }

    document.querySelectorAll('.theme-option').forEach(function(option) {
        option.addEventListener('click', function(e) {
            e.preventDefault();
            selectTheme(this.dataset.theme);
        });
    });

    // Inline editing for fields
    document.querySelectorAll('.editable-field').forEach(function(container) {
        const field = container.dataset.field;
        const valueEl = container.querySelector('.field-value');
        const inputEl = container.querySelector('.field-input');
        const errorEl = container.querySelector('.field-error');
        const editIcon = container.querySelector('.edit-icon');
        let originalValue = inputEl.value;

        // Click to edit
        valueEl.parentElement.addEventListener('click', function() {
            startEditing();
        });

        function startEditing() {
            valueEl.parentElement.classList.add('hidden');
            inputEl.classList.remove('hidden');
            inputEl.focus();
            inputEl.select();
        }

        function stopEditing(save = true) {
            if (save && inputEl.value !== originalValue) {
                saveField();
            } else {
                inputEl.value = originalValue;
                valueEl.parentElement.classList.remove('hidden');
                inputEl.classList.add('hidden');
                errorEl.classList.add('hidden');
            }
        }

        async function saveField() {
            const newValue = inputEl.value.trim();

            try {
                const response = await fetch('{{ path("app_profile_update_field") }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        field: field,
                        value: newValue
                    })
                });

                const data = await response.json();

                if (data.success) {
                    originalValue = newValue;

                    // Update display value
                    if (newValue) {
                        valueEl.textContent = newValue;
                        valueEl.classList.remove('text-gray-400', 'italic');
                    } else {
                        valueEl.textContent = 'Add ' + field.replace(/([A-Z])/g, ' $1').toLowerCase();
                        valueEl.classList.add('text-gray-400', 'italic');
                    }

                    // Update header if name changed
                    if (field === 'firstName' || field === 'lastName') {
                        updateHeaderName();
                    }
                    if (field === 'jobTitle') {
                        const headerJobTitle = document.getElementById('header-jobtitle');
                        if (headerJobTitle) headerJobTitle.textContent = newValue || 'No job title';
                    }
                    if (field === 'department') {
                        const headerDept = document.getElementById('header-department');
                        if (headerDept) headerDept.textContent = newValue;
                    }

                    showToast('Saved', 'success');
                    valueEl.parentElement.classList.remove('hidden');
                    inputEl.classList.add('hidden');
                    errorEl.classList.add('hidden');
                } else {
                    errorEl.textContent = data.error || 'Failed to save';
                    errorEl.classList.remove('hidden');
                    showToast(data.error || 'Failed to save', 'error');
                }
            } catch (error) {
                errorEl.textContent = 'Network error. Please try again.';
                errorEl.classList.remove('hidden');
                showToast('Network error', 'error');
            }
        }

        function updateHeaderName() {
            const firstName = document.querySelector('[data-field="firstName"] .field-input').value;
            const lastName = document.querySelector('[data-field="lastName"] .field-input').value;
            const headerName = document.getElementById('header-fullname');
            if (headerName) {
                headerName.textContent = firstName + ' ' + lastName;
            }
        }

        inputEl.addEventListener('blur', function() {
            stopEditing(true);
        });

        inputEl.addEventListener('keydown', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                inputEl.blur();
            } else if (e.key === 'Escape') {
                stopEditing(false);
            }
        });
    });

    // Avatar upload
    const avatarInput = document.getElementById('avatar-input');
    if (avatarInput) {
        avatarInput.addEventListener('change', async function(e) {
            console.log('File selected:', e.target.files);
            const file = e.target.files[0];
            if (!file) {
                console.log('No file selected');
                return;
            }
            console.log('Uploading file:', file.name, file.type, file.size);

            // Validate file size (2MB)
            if (file.size > 2 * 1024 * 1024) {
                showToast('File is too large. Maximum size is 2MB.', 'error');
                return;
            }

            // Validate file type
            if (!['image/jpeg', 'image/png', 'image/gif', 'image/webp'].includes(file.type)) {
                showToast('Invalid file type. Please upload a JPEG, PNG, GIF, or WebP image.', 'error');
                return;
            }

            const formData = new FormData();
            formData.append('avatar', file);

            try {
                console.log('Sending upload request...');
                const response = await fetch('{{ path("app_profile_avatar_upload") }}', {
                    method: 'POST',
                    body: formData,
                    credentials: 'same-origin'
                });
                console.log('Response status:', response.status);

                if (!response.ok) {
                    const text = await response.text();
                    console.error('Upload failed:', response.status, text);
                    showToast('Upload failed: ' + response.status, 'error');
                    return;
                }

                const data = await response.json();
                console.log('Response data:', data);

                if (data.success) {
                    // Update avatar display
                    const container = document.getElementById('avatar-container');
                    const imgContainer = container.querySelector('.ring-4');
                    imgContainer.innerHTML = `
                        <img src="${data.avatar}" alt="Avatar" class="w-full h-full object-cover" id="avatar-image">
                    `;

                    // Add remove button if not present
                    if (!document.getElementById('remove-avatar-btn')) {
                        const removeBtn = document.createElement('button');
                        removeBtn.type = 'button';
                        removeBtn.id = 'remove-avatar-btn';
                        removeBtn.className = 'absolute -bottom-1 -right-1 w-8 h-8 bg-red-500 hover:bg-red-600 text-white rounded-full shadow-lg flex items-center justify-center transition-colors';
                        removeBtn.title = 'Remove photo';
                        removeBtn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>';
                        removeBtn.onclick = removeAvatar;
                        container.appendChild(removeBtn);
                    }

                    showToast('Avatar updated', 'success');
                } else {
                    showToast(data.error || 'Failed to upload avatar', 'error');
                }
            } catch (error) {
                showToast('Network error. Please try again.', 'error');
            }

            // Reset input
            avatarInput.value = '';
        });
    }

    // Remove avatar
    const removeAvatarBtn = document.getElementById('remove-avatar-btn');
    if (removeAvatarBtn) {
        removeAvatarBtn.addEventListener('click', removeAvatar);
    }
}

