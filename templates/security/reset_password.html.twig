{% extends 'base.html.twig' %}

{% block title %}Reset Password - Honeyguide Projects{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col justify-center px-4 py-12 sm:px-6 lg:px-8 bg-gray-50">
    <div class="mx-auto w-full max-w-md">
        <div class="text-center">
            <span class="text-4xl">üîê</span>
        </div>
        <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">
            Set new password
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
            Enter your new password below.
        </p>
    </div>

    <div class="mt-8 mx-auto w-full max-w-md">
        <div class="bg-white py-8 px-6 shadow-lg rounded-xl sm:px-10">
            <form class="space-y-6" action="{{ path('app_reset_password', {token: token}) }}" method="post">
                <div>
                    <label for="password" class="block text-sm font-medium leading-6 text-gray-900">New Password</label>
                    <div class="mt-2">
                        <input id="password" name="password" type="password" autocomplete="new-password" required
                               minlength="8"
                               class="block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm sm:leading-6"
                               placeholder="Enter new password">
                    </div>
                    <p class="mt-2 text-sm text-gray-500">
                        Must be at least 8 characters.
                    </p>
                </div>

                <div>
                    <label for="confirm_password" class="block text-sm font-medium leading-6 text-gray-900">Confirm Password</label>
                    <div class="mt-2">
                        <input id="confirm_password" name="confirm_password" type="password" autocomplete="new-password" required
                               minlength="8"
                               class="block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm sm:leading-6"
                               placeholder="Confirm new password">
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="flex w-full justify-center rounded-md bg-primary-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-primary-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600">
                        Reset password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
