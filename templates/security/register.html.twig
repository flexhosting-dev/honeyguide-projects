{% extends 'base.html.twig' %}

{% block title %}Create Account - WorkFlow{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8 bg-gray-50">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <div class="text-center">
            <span class="text-4xl">ðŸ“‹</span>
        </div>
        <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">
            Create your account
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
            Already have an account?
            <a href="{{ path('app_login') }}" class="font-medium text-primary-600 hover:text-primary-500">
                Sign in
            </a>
        </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}

                {% if registrationForm.vars.errors|length > 0 %}
                    <div data-controller="flash" class="rounded-md bg-red-50 p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                {{ form_errors(registrationForm) }}
                            </div>
                        </div>
                    </div>
                {% endif %}

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        {{ form_label(registrationForm.firstName, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                        <div class="mt-2">
                            {{ form_widget(registrationForm.firstName) }}
                        </div>
                        {{ form_errors(registrationForm.firstName) }}
                    </div>

                    <div>
                        {{ form_label(registrationForm.lastName, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                        <div class="mt-2">
                            {{ form_widget(registrationForm.lastName) }}
                        </div>
                        {{ form_errors(registrationForm.lastName) }}
                    </div>
                </div>

                <div>
                    {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                    <div class="mt-2">
                        {{ form_widget(registrationForm.email) }}
                    </div>
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div>
                    {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                    <div class="mt-2">
                        {{ form_widget(registrationForm.plainPassword.first) }}
                    </div>
                </div>

                <div>
                    {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                    <div class="mt-2">
                        {{ form_widget(registrationForm.plainPassword.second) }}
                    </div>
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <div>
                    <button type="submit"
                            class="flex w-full justify-center rounded-md bg-primary-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-primary-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600">
                        Create account
                    </button>
                </div>
            {{ form_end(registrationForm) }}

            <div class="mt-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="bg-white px-2 text-gray-500">or</span>
                    </div>
                </div>

                <div class="mt-6">
                    <a href="{{ path('connect_google_start') }}"
                       class="flex w-full items-center justify-center gap-3 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus-visible:ring-transparent">
                        <svg class="h-5 w-5" viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M12.0003 4.75C13.7703 4.75 15.3553 5.36002 16.6053 6.54998L20.0303 3.125C17.9502 1.19 15.2353 0 12.0003 0C7.31028 0 3.25527 2.69 1.28027 6.60998L5.27028 9.70498C6.21525 6.86002 8.87028 4.75 12.0003 4.75Z" fill="#EA4335"/>
                            <path d="M23.49 12.275C23.49 11.49 23.415 10.73 23.3 10H12V14.51H18.47C18.18 15.99 17.34 17.25 16.08 18.1L19.945 21.1C22.2 19.01 23.49 15.92 23.49 12.275Z" fill="#4285F4"/>
                            <path d="M5.26498 14.2949C5.02498 13.5699 4.88501 12.7999 4.88501 11.9999C4.88501 11.1999 5.01998 10.4299 5.26498 9.70492L1.275 6.60992C0.46 8.22992 0 10.0599 0 11.9999C0 13.9399 0.46 15.7699 1.28 17.3899L5.26498 14.2949Z" fill="#FBBC05"/>
                            <path d="M12.0004 24.0001C15.2404 24.0001 17.9654 22.935 19.9454 21.095L16.0804 18.095C15.0054 18.82 13.6204 19.245 12.0004 19.245C8.8704 19.245 6.21537 17.135 5.2654 14.29L1.27539 17.385C3.25539 21.31 7.3104 24.0001 12.0004 24.0001Z" fill="#34A853"/>
                        </svg>
                        Continue with Google
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
