{% extends 'base.html.twig' %}

{% block title %}Forgot Password - Honeyguide Projects{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col justify-center px-4 py-12 sm:px-6 lg:px-8 bg-gray-50">
    <div class="mx-auto w-full max-w-md">
        <div class="text-center">
            <span class="text-4xl">ðŸŽ¯</span>
        </div>
        <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">
            Reset your password
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
            Remember your password?
            <a href="{{ path('app_login') }}" class="font-medium text-primary-600 hover:text-primary-500">
                Sign in
            </a>
        </p>
    </div>

    <div class="mt-8 mx-auto w-full max-w-md">
        <div class="bg-white py-8 px-6 shadow-lg rounded-xl sm:px-10">
            <form class="space-y-6" action="{{ path('app_forgot_password') }}" method="post">
                <div>
                    <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email address</label>
                    <div class="mt-2">
                        <input id="email" name="email" type="email" autocomplete="email" required
                               class="block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm sm:leading-6"
                               placeholder="Enter your email address">
                    </div>
                    <p class="mt-2 text-sm text-gray-500">
                        We'll send you a link to reset your password.
                    </p>
                </div>

                <div>
                    <button type="submit"
                            class="flex w-full justify-center rounded-md bg-primary-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-primary-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600">
                        Send reset link
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
