{#
   Task Table Component - Vue-powered spreadsheet-like table view
   Variables:
   - tasks: Task[] (flat list of all tasks)
   - milestones: list of Milestone entities
   - members: array of project members
   - canEdit: boolean (whether user can edit tasks)
   - project: Project (optional, for project-specific context)
#}

{% set milestones = milestones|default([]) %}
{% set members = members|default([]) %}
{% set canEdit = canEdit|default(false) %}
{% set basePath = app.request.basePath %}

<div
    data-vue-component="TaskTable"
    data-vue-initial-tasks='{{ tasks|map(task => {
        id: task.id ~ '',
        title: task.title|default(''),
        status: { value: task.status ? task.status.value : 'todo', label: task.status ? task.status.label : 'To Do' },
        priority: { value: task.priority ? task.priority.value : 'none', label: task.priority ? task.priority.label : 'None' },
        milestoneId: task.milestone ? task.milestone.id ~ '' : null,
        projectName: task.project ? task.project.name|default('') : '',
        dueDate: task.dueDate ? task.dueDate|date('Y-m-d') : null,
        startDate: task.startDate ? task.startDate|date('Y-m-d') : null,
        position: task.position|default(0),
        depth: task.depth|default(0),
        parentId: task.parent ? task.parent.id ~ '' : null,
        parentChain: task.parentChain|default(''),
        commentCount: task.commentCount|default(0),
        checklistCount: task.checklistCount|default(0),
        completedChecklistCount: task.completedChecklistCount|default(0),
        subtaskCount: task.subtaskCount|default(0),
        completedSubtaskCount: task.completedSubtaskCount|default(0),
        assignees: task.assignees|map(a => {
            id: a.id ~ '',
            user: a.user ? {
                id: a.user.id ~ '',
                firstName: a.user.firstName|default(''),
                lastName: a.user.lastName|default(''),
                fullName: a.user.fullName|default('Unknown'),
                avatar: a.user.avatar ? basePath ~ '/uploads/avatars/' ~ a.user.avatar : null
            } : null
        })|filter(a => a.user is not null),
        tags: task.tags|map(t => {
            id: t.id ~ '',
            name: t.name|default(''),
            color: t.color|default('#6b7280')
        })
    })|json_encode|e('html_attr') }}'
    data-vue-milestones='{{ milestones|map(m => {
        id: m.id ~ '',
        name: m.name|default(''),
        dueDate: m.dueDate ? m.dueDate|date('Y-m-d') : null,
        projectId: m.project ? m.project.id ~ '' : null
    })|json_encode|e('html_attr') }}'
    data-vue-members='{{ members|map(m => {
        id: m.id ~ '',
        fullName: m.fullName,
        firstName: m.firstName,
        lastName: m.lastName,
        avatar: m.avatar ? basePath ~ '/uploads/avatars/' ~ m.avatar : null
    })|json_encode|e('html_attr') }}'
    data-vue-base-path="{{ basePath }}"
    data-vue-can-edit="{{ canEdit ? 'true' : 'false' }}"
    data-vue-status-url-template="{{ path('app_task_update_status', {id: '__TASK_ID__'}) }}"
    data-vue-priority-url-template="{{ path('app_task_update_priority', {id: '__TASK_ID__'}) }}"
    data-vue-title-url-template="{{ path('app_task_update_title', {id: '__TASK_ID__'}) }}"
    data-vue-due-date-url-template="{{ path('app_task_update_due_date', {id: '__TASK_ID__'}) }}"
    data-vue-milestone-url-template="{{ path('app_task_update_milestone', {id: '__TASK_ID__'}) }}"
    data-vue-project-id="{{ project ? project.id : '' }}"
    data-vue-create-url="{{ project is defined and project ? path('app_task_create_json', {projectId: project.id}) : '' }}"
    data-vue-create-url-template="{{ path('app_task_create_json', {projectId: '__PROJECT_ID__'}) }}"
    data-vue-storage-key="{{ storageKey|default('task_table') }}"
    data-vue-children-url-template="{{ path('app_task_children', {id: '__TASK_ID__'}) }}"
    data-vue-bulk-update-url="{{ path('app_task_bulk_update') }}"
    data-vue-bulk-delete-url="{{ path('app_task_bulk_delete') }}"
    data-vue-assignees-url-template="{{ path('app_task_update_assignees', {id: '__TASK_ID__'}) }}"
    data-vue-duplicate-url-template="{{ path('app_task_duplicate', {id: '__TASK_ID__'}) }}"
    data-vue-subtask-url-template="{{ path('app_task_create_subtask', {id: '__TASK_ID__'}) }}"
    data-vue-reorder-url="{{ path('app_task_reorder') }}"
    data-vue-subtask-reorder-url-template="{{ path('app_task_subtasks_reorder', {id: '__TASK_ID__'}) }}"
    data-vue-change-parent-url-template="{{ path('app_task_change_parent', {id: '__TASK_ID__'}) }}"
>
    {# Loading fallback shown before Vue mounts #}
    <div class="flex items-center justify-center py-12">
        <svg class="animate-spin h-8 w-8 text-primary-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span class="ml-3 text-gray-500">Loading task table...</span>
    </div>
</div>

<style>
/* Task table specific styles */
.task-table-container {
    position: relative;
}

.task-table-container table {
    table-layout: fixed;
}

/* Make title column flex to fill remaining space */
.task-table-container th:nth-child(2),
.task-table-container td:nth-child(2) {
    width: auto !important;
    min-width: 200px;
}

/* Tree line styles for subtasks */
.task-table-row-child {
    position: relative;
}

/* Hover effects */
.task-table-row:hover .task-title {
    color: var(--color-primary-600, #4f46e5);
}

/* Selected row styling */
.task-table-row.bg-primary-50 {
    background-color: rgba(79, 70, 229, 0.05);
}

/* Sticky header */
.task-table-container thead {
    position: sticky;
    top: 0;
    z-index: 10;
    background: #f9fafb;
}

/* Focus visible styles for accessibility */
.task-table-row:focus-visible {
    outline: 2px solid var(--color-primary-500, #6366f1);
    outline-offset: -2px;
}

/* Keyboard navigation focus styles */
.task-table-row:focus {
    outline: none;
    box-shadow: inset 0 0 0 2px var(--color-primary-500, #6366f1);
}

/* Reduce motion for users who prefer it */
@media (prefers-reduced-motion: reduce) {
    .task-table-row,
    .task-table-container * {
        transition: none !important;
        animation: none !important;
    }
}

/* Mobile-specific adjustments */
@media (max-width: 640px) {
    .task-table-container th,
    .task-table-container td {
        padding-left: 0.5rem;
        padding-right: 0.5rem;
    }

    .task-table-container th:nth-child(2),
    .task-table-container td:nth-child(2) {
        min-width: 150px;
    }

    /* Smaller font on mobile */
    .task-table-container .text-sm {
        font-size: 0.8125rem;
    }
}

/* Bulk action bar mobile adjustments */
@media (max-width: 640px) {
    .bulk-action-bar {
        left: 1rem;
        right: 1rem;
        transform: none;
        max-width: calc(100% - 2rem);
    }

    .bulk-action-bar > div {
        flex-wrap: wrap;
        justify-content: center;
    }
}

/* Context menu animation */
@keyframes contextMenuFadeIn {
    from {
        opacity: 0;
        transform: scale(0.95);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

/* Context menu styles - applied via Tailwind but adding animation */
[role="menu"] {
    animation: contextMenuFadeIn 0.1s ease-out;
}

/* Prevent text selection during long press on mobile */
.task-table-row {
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    user-select: none;
}

/* Allow text selection when editing */
.task-table-row input,
.task-table-row select,
.task-table-row textarea {
    -webkit-user-select: auto;
    user-select: auto;
}

/* Drag and drop styles */
.task-table-row.dragging {
    opacity: 0.5;
    background-color: #f3f4f6;
}

.task-table-row.drag-over-before {
    box-shadow: inset 0 2px 0 0 #3b82f6;
}

.task-table-row.drag-over-after {
    box-shadow: inset 0 -2px 0 0 #3b82f6;
}

.task-table-row.drag-over-child {
    background-color: rgba(59, 130, 246, 0.1);
    box-shadow: inset 0 0 0 2px rgba(59, 130, 246, 0.5);
}

.task-table-row.drag-invalid {
    box-shadow: inset 0 0 0 2px #ef4444 !important;
    background-color: rgba(239, 68, 68, 0.05);
}

.drag-handle {
    cursor: grab;
    opacity: 0;
    transition: opacity 0.15s ease;
}

.drag-handle:active {
    cursor: grabbing;
}

.task-table-row:hover .drag-handle,
.task-table-row:focus-within .drag-handle {
    opacity: 0.5;
}

.task-table-row:hover .drag-handle:hover {
    opacity: 1;
}

/* Touch device adjustments for drag handle */
@media (pointer: coarse) {
    .drag-handle {
        opacity: 0.3;
    }
    .task-table-row:hover .drag-handle {
        opacity: 0.5;
    }
}

/* Drop indicator line */
.drop-indicator {
    position: absolute;
    left: 0;
    right: 0;
    height: 2px;
    background-color: #3b82f6;
    pointer-events: none;
    z-index: 10;
}

.drop-indicator::before {
    content: '';
    position: absolute;
    left: 0;
    top: -3px;
    width: 8px;
    height: 8px;
    background-color: #3b82f6;
    border-radius: 50%;
}

.drop-indicator.invalid {
    background-color: #ef4444;
}

.drop-indicator.invalid::before {
    background-color: #ef4444;
}
</style>
