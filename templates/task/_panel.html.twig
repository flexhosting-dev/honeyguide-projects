{# Task Panel Content - loaded via AJAX into off-canvas #}
{% set canEdit = canEdit|default(false) %}
<div class="flex flex-col h-full" data-task-id="{{ task.id }}" data-project-id="{{ project.id }}" data-can-edit="{{ canEdit ? 'true' : 'false' }}">
    {# Header #}
    <div class="flex-shrink-0 px-6 py-4 border-b border-gray-200">
        <div class="flex items-start justify-between">
            <div class="flex-1 min-w-0">
                {# Title - Editable only if canEdit #}
                {% if canEdit %}
                <h2 class="text-lg font-semibold text-gray-900 editable-title outline-none rounded px-1 -mx-1 hover:bg-gray-50 focus:bg-white focus:ring-2 focus:ring-primary-500"
                    contenteditable="true"
                    data-field="title"
                    data-original="{{ task.title }}"
                    data-endpoint="{{ path('app_task_update_title', {id: task.id}) }}">{{ task.title }}</h2>
                {% else %}
                <h2 class="text-lg font-semibold text-gray-900 px-1 -mx-1">{{ task.title }}</h2>
                {% endif %}
                <p class="mt-1 text-sm text-gray-500 flex items-center gap-1">
                    <svg class="w-3.5 h-3.5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z" />
                    </svg>
                    {{ project.name }} / {{ task.milestone.name }}
                </p>
                {% if task.parent %}
                <p class="mt-1 text-xs text-gray-500 flex items-center gap-1">
                    {# Depth indicator icon #}
                    {% set depth = task.depth|default(1) %}
                    <svg class="w-4 h-4 text-gray-400" viewBox="0 0 16 16" fill="currentColor" title="Subtask (Level {{ depth }})">
                        {# First line (parent level) #}
                        <rect x="2" y="2" width="6" height="1.5" rx="0.5"/>
                        {# Indented lines (current level) - one for each depth level #}
                        {% for i in 1..depth %}
                        <rect x="4" y="{{ 2 + (i * 4) }}" width="10" height="1.5" rx="0.5"/>
                        {% endfor %}
                    </svg>
                    <span>Subtask of: <a href="{{ path('app_task_show', {id: task.parent.id}) }}" class="text-primary-600 hover:text-primary-800 font-medium" onclick="event.preventDefault(); pushSubtaskPanel('{{ task.parent.id }}');">{{ task.parent.title }}</a></span>
                </p>
                {% endif %}
                <div class="flex items-center flex-wrap gap-2 mt-2">
                    {# Status Badge - Editable only if canEdit #}
                    {% set currentStatusColor = task.statusType ? task.statusType.color : task.effectiveStatusColor %}
                    {% set currentStatusLabel = task.effectiveStatusLabel %}
                    {% set currentStatusValue = task.effectiveStatusValue %}
                    {% if canEdit %}
                    <div class="relative inline-block">
                        <button type="button"
                                class="status-badge-btn inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium cursor-pointer hover:ring-2 hover:ring-offset-1 hover:ring-gray-300"
                                style="background-color: color-mix(in srgb, {{ currentStatusColor }} 15%, white); color: color-mix(in srgb, {{ currentStatusColor }} 80%, black);"
                                data-current="{{ currentStatusValue }}"
                                data-color="{{ currentStatusColor }}"
                                onclick="toggleStatusDropdown(this, event)">
                            <span class="status-label">{{ currentStatusLabel }}</span>
                            <svg class="ml-1 h-3 w-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                            </svg>
                        </button>
                        <div class="status-dropdown hidden absolute left-0 mt-1 w-40 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-10">
                            <div class="py-1">
                                {% for status in allStatuses|default([]) %}
                                <button type="button" onclick="updateTaskStatus('{{ task.id }}', '{{ status.slug }}', this)" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center" data-color="{{ status.color }}">
                                    <span class="w-2 h-2 rounded-full mr-2" style="background-color: {{ status.color }};"></span> {{ status.name }}
                                </button>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium"
                          style="background-color: color-mix(in srgb, {{ currentStatusColor }} 15%, white); color: color-mix(in srgb, {{ currentStatusColor }} 80%, black);">
                        {{ currentStatusLabel }}
                    </span>
                    {% endif %}

                    {# Priority Badge - Editable only if canEdit #}
                    {% if canEdit %}
                    <div class="relative inline-block">
                        <button type="button"
                                class="priority-badge-btn inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium cursor-pointer hover:ring-2 hover:ring-offset-1 hover:ring-gray-300
                                    {% if task.priority.value == 'high' %}bg-red-100 text-red-700
                                    {% elseif task.priority.value == 'medium' %}bg-yellow-100 text-yellow-700
                                    {% elseif task.priority.value == 'low' %}bg-blue-100 text-blue-700
                                    {% else %}bg-gray-100 text-gray-700{% endif %}"
                                data-current="{{ task.priority.value }}"
                                onclick="togglePriorityDropdown(this, event)">
                            <span class="priority-label">{{ task.priority.label }}</span>
                            <svg class="ml-1 h-3 w-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                            </svg>
                        </button>
                        <div class="priority-dropdown hidden absolute left-0 mt-1 w-40 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-10">
                            <div class="py-1">
                                <button type="button" onclick="updateTaskPriority('{{ task.id }}', 'none', this)" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <span class="w-2 h-2 rounded-full bg-gray-400 mr-2"></span> None
                                </button>
                                <button type="button" onclick="updateTaskPriority('{{ task.id }}', 'low', this)" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <span class="w-2 h-2 rounded-full bg-blue-400 mr-2"></span> Low
                                </button>
                                <button type="button" onclick="updateTaskPriority('{{ task.id }}', 'medium', this)" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <span class="w-2 h-2 rounded-full bg-yellow-400 mr-2"></span> Medium
                                </button>
                                <button type="button" onclick="updateTaskPriority('{{ task.id }}', 'high', this)" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <span class="w-2 h-2 rounded-full bg-red-400 mr-2"></span> High
                                </button>
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium
                        {% if task.priority.value == 'high' %}bg-red-100 text-red-700
                        {% elseif task.priority.value == 'medium' %}bg-yellow-100 text-yellow-700
                        {% elseif task.priority.value == 'low' %}bg-blue-100 text-blue-700
                        {% else %}bg-gray-100 text-gray-700{% endif %}">
                        {{ task.priority.label }}
                    </span>
                    {% endif %}

                    <span class="text-xs text-gray-400">&middot; created {{ task.createdAt|date('M d, Y') }}</span>
                </div>
            </div>
            <button type="button" onclick="closeTaskPanel()" class="panel-close-btn ml-4 rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-500">
                <span class="sr-only">Close panel</span>
                {# Back arrow (shown when stacked) #}
                <svg class="h-6 w-6 panel-back-icon hidden" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
                </svg>
                {# Close X (shown when not stacked) #}
                <svg class="h-6 w-6 panel-close-icon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
    </div>

    {# Content #}
    <div class="flex-1 overflow-y-auto px-6 py-4">
        {# Description - Rich Text Editor (Vue Component) #}
        <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-900 mb-2">Description & Attachments</h3>
            {% include 'task/_description_vue.html.twig' with {task: task, canEdit: canEdit} %}
        </div>

        {# Assignees - Editable only if canEdit #}
        <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-900 mb-2">Assigned to</h3>
            {% if canEdit %}
            <div class="assignees-container" data-task-id="{{ task.id }}" data-project-id="{{ project.id }}">
                <div class="assignees-list flex flex-wrap gap-2">
                    {% for assignee in task.assignees %}
                        <span class="assignee-chip inline-flex items-center rounded-full bg-gray-100 py-1 pl-2 pr-1 text-sm font-medium text-gray-800" data-user-id="{{ assignee.user.id }}" data-user-avatar="{{ assignee.user.avatar ? app.request.basePath ~ '/uploads/avatars/' ~ assignee.user.avatar : '' }}">
                            <span class="inline-flex h-6 w-6 items-center justify-center rounded-full overflow-hidden mr-2">
                                {% if assignee.user.avatar %}
                                    <img src="{{ app.request.basePath }}/uploads/avatars/{{ assignee.user.avatar }}" alt="{{ assignee.user.fullName }}" class="w-full h-full object-cover">
                                {% else %}
                                    <span class="w-full h-full bg-gradient-to-br from-emerald-400 to-cyan-500 flex items-center justify-center">
                                        <span class="text-xs font-medium text-white">
                                            {{ assignee.user.firstName|slice(0, 1)|upper }}{{ assignee.user.lastName|slice(0, 1)|upper }}
                                        </span>
                                    </span>
                                {% endif %}
                            </span>
                            {{ assignee.user.fullName }}
                            <button type="button"
                                    onclick="removeAssignee('{{ task.id }}', '{{ assignee.user.id }}', this)"
                                    class="ml-1 inline-flex h-5 w-5 items-center justify-center rounded-full text-gray-400 hover:bg-gray-200 hover:text-gray-600">
                                <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                            </button>
                        </span>
                    {% endfor %}
                    <button type="button"
                            onclick="showAddAssigneeDropdown(this)"
                            class="add-assignee-btn inline-flex items-center rounded-full border-2 border-dashed border-gray-300 px-3 py-1 text-sm text-gray-500 hover:border-gray-400 hover:text-gray-600">
                        <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                        </svg>
                        Add
                    </button>
                </div>
                {# Add Assignee Dropdown (loaded dynamically) #}
                <div class="add-assignee-dropdown hidden absolute mt-1 w-56 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-10">
                    <div class="py-1 max-h-48 overflow-y-auto">
                        <div class="px-4 py-2 text-sm text-gray-500">Loading...</div>
                    </div>
                </div>
            </div>
            {% if task.assignees|length == 0 %}
                <p class="no-assignees-msg text-sm text-gray-400 italic mt-2">No assignees</p>
            {% endif %}
            {% else %}
            {# Read-only assignees display #}
            {% if task.assignees|length > 0 %}
            <div class="flex flex-wrap gap-2">
                {% for assignee in task.assignees %}
                    <span class="inline-flex items-center rounded-full bg-gray-100 py-1 pl-2 pr-3 text-sm font-medium text-gray-800">
                        <span class="inline-flex h-6 w-6 items-center justify-center rounded-full overflow-hidden mr-2">
                            {% if assignee.user.avatar %}
                                <img src="{{ app.request.basePath }}/uploads/avatars/{{ assignee.user.avatar }}" alt="{{ assignee.user.fullName }}" class="w-full h-full object-cover">
                            {% else %}
                                <span class="w-full h-full bg-gradient-to-br from-emerald-400 to-cyan-500 flex items-center justify-center">
                                    <span class="text-xs font-medium text-white">
                                        {{ assignee.user.firstName|slice(0, 1)|upper }}{{ assignee.user.lastName|slice(0, 1)|upper }}
                                    </span>
                                </span>
                            {% endif %}
                        </span>
                        {{ assignee.user.fullName }}
                    </span>
                {% endfor %}
            </div>
            {% else %}
                <p class="text-sm text-gray-400 italic">No assignees</p>
            {% endif %}
            {% endif %}
        </div>

        {# Details Grid #}
        <div class="mb-6 grid grid-cols-3 gap-4">
            {# Start Date - Editable only if canEdit #}
            <div>
                <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Start Date</dt>
                <dd class="mt-1">
                    {% if canEdit %}
                    <div class="relative">
                        <input type="date"
                               class="start-date-input text-sm border-0 p-0 bg-transparent cursor-pointer hover:text-primary-600 focus:ring-0 {{ task.startDate ? 'text-gray-900' : 'text-transparent' }} w-full"
                               value="{{ task.startDate ? task.startDate|date('Y-m-d') : '' }}"
                               data-original="{{ task.startDate ? task.startDate|date('Y-m-d') : '' }}"
                               data-endpoint="{{ path('app_task_update_start_date', {id: task.id}) }}"
                               onchange="updateStartDate(this)">
                        {% if not task.startDate %}
                            <span class="start-date-placeholder text-sm text-gray-400 italic pointer-events-none absolute left-0 top-0">Not set</span>
                        {% endif %}
                    </div>
                    {% else %}
                    <span class="text-sm text-gray-900">{{ task.startDate ? task.startDate|date('M d, Y') : 'Not set' }}</span>
                    {% endif %}
                </dd>
            </div>
            {# Due Date - Editable only if canEdit #}
            <div>
                <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Due Date</dt>
                <dd class="mt-1">
                    {% if canEdit %}
                    <div class="relative">
                        <input type="date"
                               class="due-date-input text-sm border-0 p-0 bg-transparent cursor-pointer hover:text-primary-600 focus:ring-0 {{ task.dueDate ? (task.isOverdue ? 'text-red-600 font-medium' : 'text-gray-900') : 'text-transparent' }} w-full"
                               value="{{ task.dueDate ? task.dueDate|date('Y-m-d') : '' }}"
                               data-original="{{ task.dueDate ? task.dueDate|date('Y-m-d') : '' }}"
                               data-endpoint="{{ path('app_task_update_due_date', {id: task.id}) }}"
                               onchange="updateDueDate(this)">
                        {% if not task.dueDate %}
                            <span class="due-date-placeholder text-sm text-gray-400 italic pointer-events-none absolute left-0 top-0">Not set</span>
                        {% endif %}
                    </div>
                    {% else %}
                    <span class="text-sm {{ task.isOverdue ? 'text-red-600 font-medium' : 'text-gray-900' }}">
                        {% if task.dueDate %}
                            {{ task.dueDate|date('M d, Y') }}{% if task.isOverdue %} (Overdue){% endif %}
                        {% else %}
                            Not set
                        {% endif %}
                    </span>
                    {% endif %}
                </dd>
            </div>
            {# Recurrence - Editable only if canEdit #}
            <div class="min-w-0">
                <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Repeat</dt>
                <dd class="mt-1">
                    {% if canEdit %}
                    <div class="relative recurrence-container" data-task-id="{{ task.id }}">
                        <button type="button"
                                class="recurrence-btn text-sm hover:text-primary-600 flex items-start text-left w-full {{ task.recurring ? 'text-primary-600' : 'text-gray-900' }}"
                                onclick="openRecurrenceModal('{{ task.id }}')">
                            <svg class="mr-1 h-3.5 w-3.5 flex-shrink-0 mt-0.5 {{ task.recurring ? 'text-primary-500' : 'text-gray-400' }}" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
                            </svg>
                            <span class="recurrence-label break-words">{{ task.recurrenceDescription }}</span>
                        </button>
                    </div>
                    {% else %}
                    <span class="text-sm text-gray-900 flex items-start">
                        {% if task.recurring %}
                        <svg class="mr-1 h-3.5 w-3.5 text-primary-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
                        </svg>
                        {% endif %}
                        <span class="break-words">{{ task.recurrenceDescription }}</span>
                    </span>
                    {% endif %}
                </dd>
            </div>
            {# Milestone - Editable only if canEdit #}
            <div class="col-span-3">
                <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Milestone</dt>
                <dd class="mt-1">
                    {% if canEdit %}
                    <div class="relative inline-block">
                        <button type="button"
                                class="milestone-btn text-sm text-gray-900 hover:text-primary-600 flex items-center"
                                onclick="toggleMilestoneDropdown(this, event)">
                            <span class="milestone-label">{{ task.milestone.name }}</span>
                            <svg class="ml-1 h-3 w-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                            </svg>
                        </button>
                        <div class="milestone-dropdown hidden absolute left-0 mt-1 w-48 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-10">
                            <div class="py-1">
                                {% for milestone in project.milestones %}
                                    <button type="button"
                                            onclick="updateTaskMilestone('{{ task.id }}', '{{ milestone.id }}', '{{ milestone.name }}', this)"
                                            class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 {{ milestone.id == task.milestone.id ? 'bg-gray-50 font-medium' : '' }}">
                                        {{ milestone.name }}
                                    </button>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <span class="text-sm text-gray-900">{{ task.milestone.name }}</span>
                    {% endif %}
                </dd>
            </div>
        </div>

        {# Tags (Vue Component) - pass canEdit #}
        <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-900 mb-2">Tags</h3>
            {% include 'task/_tags_vue.html.twig' with {task: task, canEdit: canEdit} %}
        </div>

        {# Tabs for Checklist, Comments and Activity #}
        <div class="task-panel-tabs">
            {# Tab Navigation #}
            <div class="flex border-b border-gray-200 mb-4">
                <button type="button"
                        class="tab-btn active px-4 py-2 text-sm font-medium text-gray-700 border-b-2 border-transparent hover:text-gray-900 hover:border-gray-300 -mb-px"
                        data-tab="checklist"
                        onclick="switchTab('checklist', this)">
                    Checklist
                    <span class="checklist-count text-gray-400 font-normal ml-1">({{ task.checklistCount }})</span>
                </button>
                <button type="button"
                        class="tab-btn px-4 py-2 text-sm font-medium text-gray-500 border-b-2 border-transparent hover:text-gray-900 hover:border-gray-300 -mb-px"
                        data-tab="subtasks"
                        onclick="switchTab('subtasks', this)">
                    Subtasks
                    <span class="text-gray-400 font-normal ml-1">{% if task.subtaskCount > 0 %}({{ task.completedSubtaskCount }}/{{ task.subtaskCount }}){% endif %}</span>
                </button>
                <button type="button"
                        class="tab-btn px-4 py-2 text-sm font-medium text-gray-500 border-b-2 border-transparent hover:text-gray-900 hover:border-gray-300 -mb-px"
                        data-tab="comments"
                        onclick="switchTab('comments', this)">
                    Comments
                    <span class="comments-count text-gray-400 font-normal ml-1">{% if task.comments|length > 0 %}({{ task.comments|length }}){% endif %}</span>
                </button>
                <button type="button"
                        class="tab-btn px-4 py-2 text-sm font-medium text-gray-500 border-b-2 border-transparent hover:text-gray-900 hover:border-gray-300 -mb-px"
                        data-tab="activity"
                        onclick="switchTab('activity', this); triggerVueActivityLoad();">
                    Feed
                </button>
            </div>

            {# Checklist Tab Content (Vue Component) #}
            <div class="tab-content" id="tab-checklist">
                {% include 'task/_checklist_vue.html.twig' with {task: task, canEdit: canEdit} %}
            </div>

            {# Subtasks Tab Content (Vue Component) #}
            <div class="tab-content hidden" id="tab-subtasks">
                {% include 'task/_subtasks_vue.html.twig' with {task: task, canEdit: canEdit, project: project} %}
            </div>

            {# Comments Tab Content (Vue Component) #}
            <div class="tab-content hidden" id="tab-comments">
                {% include 'task/_comments_vue.html.twig' with {task: task, canEdit: canComment|default(true)} %}
            </div>

            {# Activity Tab Content (Vue Component) #}
            <div class="tab-content hidden" id="tab-activity">
                {% include 'task/_activity_vue.html.twig' with {task: task, autoLoad: false} %}
            </div>
        </div>
    </div>

    {# Footer Actions #}
    <div class="flex-shrink-0 px-6 py-4 border-t border-gray-200 bg-gray-50">
        <div class="flex items-center justify-between gap-4">
            {# Left side: Move Task dropdown #}
            <div class="flex items-center gap-2">
                {% if canEdit %}
                <div class="relative">
                    <button type="button"
                            id="move-task-btn-{{ task.id }}"
                            onclick="toggleMoveTaskDropdown(this, event)"
                            class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900 px-2 py-1 rounded hover:bg-gray-100">
                        <svg class="mr-1.5 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21 3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
                        </svg>
                        Move Task
                        <svg class="ml-1 h-3 w-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                        </svg>
                    </button>
                    <div class="move-task-dropdown hidden absolute bottom-full left-0 mb-1 w-56 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-10">
                        <div class="py-1">
                            {% if task.parent %}
                                {# Subtask options #}
                                <button type="button"
                                        onclick="promoteTask('{{ task.id }}', {{ task.parent.parent ? '\'' ~ task.parent.parent.id ~ '\'' : 'null' }})"
                                        class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <svg class="mr-2 h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18" />
                                    </svg>
                                    Promote to parent level
                                </button>
                                <button type="button"
                                        onclick="openMoveToParentModal('{{ task.id }}', '{{ task.milestone.id }}', '{{ project.id }}')"
                                        class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <svg class="mr-2 h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 4.5h14.25M3 9h9.75M3 13.5h5.25m5.25-.75L17.25 9m0 0L21 12.75M17.25 9v12" />
                                    </svg>
                                    Move to different parent
                                </button>
                            {% else %}
                                {# Root task options #}
                                <button type="button"
                                        onclick="openMoveToProjectModal('{{ task.id }}')"
                                        class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <svg class="mr-2 h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z" />
                                    </svg>
                                    Move to Different Project
                                </button>
                                <button type="button"
                                        onclick="openMoveToMilestoneModal('{{ task.id }}', '{{ project.id }}')"
                                        class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <svg class="mr-2 h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                                    </svg>
                                    Move to Different Milestone
                                </button>
                                <button type="button"
                                        onclick="openMoveToParentModal('{{ task.id }}', '{{ task.milestone.id }}', '{{ project.id }}')"
                                        class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <svg class="mr-2 h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 4.5h14.25M3 9h9.75M3 13.5h5.25m5.25-.75L17.25 9m0 0L21 12.75M17.25 9v12" />
                                    </svg>
                                    Make Subtask Of
                                </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>

            {# Center: Open full page link #}
            <a href="{{ path('app_task_show', {id: task.id}) }}"
               class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900">
                <svg class="mr-1.5 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                </svg>
                Open Full Page
            </a>

            {# Right side: Delete button #}
            {% if canEdit %}
            <button type="button"
                    onclick="confirmDeleteTask('{{ task.id }}', '{{ task.title|e('js') }}', {{ task.subtaskCount }})"
                    class="inline-flex items-center text-sm text-red-600 hover:text-red-800 px-2 py-1 rounded hover:bg-red-50">
                <svg class="mr-1.5 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                </svg>
                Delete
            </button>
            {% endif %}
        </div>
    </div>
</div>
