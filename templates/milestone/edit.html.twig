{% extends 'layout.html.twig' %}

{% block title %}Edit {{ milestone.name }} - Honeyguide Projects{% endblock %}

{% block content %}
<div class="mx-auto max-w-2xl">
    <div class="mb-8">
        <a href="{{ path('app_project_show', {id: project.id}) }}" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
            <svg class="mr-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
            </svg>
            Back to {{ project.name }}
        </a>
    </div>

    <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center justify-between">
                <div>
                    <h3 class="text-lg font-semibold leading-6 text-gray-900">Edit milestone</h3>
                    <p class="mt-1 text-sm text-gray-500">Update the milestone details below.</p>
                </div>
                {% if milestone.isDefault %}
                <span class="inline-flex items-center rounded-full px-3 py-1 text-sm font-medium bg-gray-100 text-gray-600 border border-gray-300">
                    Default Milestone
                </span>
                {% endif %}
            </div>

            {% if milestone.isDefault %}
            <div class="mt-4 rounded-md bg-yellow-50 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-yellow-700">
                            This is the default milestone. You can edit the description and due date, but the name cannot be changed.
                        </p>
                    </div>
                </div>
            </div>
            {% endif %}

            <div class="mt-6">
                {% include 'milestone/_form.html.twig' with {form: form, button_text: 'Save Changes'} %}
            </div>
        </div>
    </div>

    {# Delete Section - Hidden for default milestone #}
    {% if not milestone.isDefault %}
    <div class="mt-8 bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-semibold leading-6 text-red-600">Danger Zone</h3>
            <p class="mt-1 text-sm text-gray-500">Deleting this milestone will also delete all tasks within it.</p>

            <div class="mt-4">
                <form action="{{ path('app_milestone_delete', {projectId: project.id, id: milestone.id}) }}" method="post"
                      data-controller="confirm" data-confirm-message-value="Are you sure you want to delete this milestone? All tasks will be deleted.">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ milestone.id) }}">
                    <button type="submit" data-action="confirm#confirm"
                            class="inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500">
                        Delete Milestone
                    </button>
                </form>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
