{% extends 'layout.html.twig' %}

{% block title %}Notification Preferences - WorkFlow{% endblock %}

{% block content %}
<div class="max-w-3xl mx-auto" x-data="notificationPreferences({{ preferences|json_encode|e('html_attr') }})">
    <div class="mb-8">
        <a href="{{ path('app_settings') }}" class="inline-flex items-center gap-1 text-sm text-gray-500 hover:text-gray-700 mb-4">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
            </svg>
            Back to Settings
        </a>
        <h1 class="text-2xl font-bold text-gray-900">Notification Preferences</h1>
        <p class="mt-1 text-sm text-gray-500">Choose which notifications you receive</p>
    </div>

    {% for category, types in categories %}
    <div class="mb-8">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">{{ category }}</h2>
        <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-gray-100">
                        <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Notification</th>
                        <th class="px-5 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-24">In-App</th>
                        <th class="px-5 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-24">Email</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    {% for type in types %}
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-5 py-3.5 text-sm text-gray-900">{{ type.label }}</td>
                        <td class="px-5 py-3.5 text-center">
                            <button type="button"
                                @click="toggle('{{ type.value }}', 'in_app')"
                                :class="isEnabled('{{ type.value }}', 'in_app') ? 'bg-primary-600' : 'bg-gray-200'"
                                class="relative inline-flex h-5 w-9 flex-shrink-0 cursor-pointer rounded-full transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
                                <span :class="isEnabled('{{ type.value }}', 'in_app') ? 'translate-x-4' : 'translate-x-0'"
                                      class="pointer-events-none inline-block h-4 w-4 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out mt-0.5 ml-0.5"></span>
                            </button>
                        </td>
                        <td class="px-5 py-3.5 text-center">
                            <button type="button"
                                @click="toggle('{{ type.value }}', 'email')"
                                :class="isEnabled('{{ type.value }}', 'email') ? 'bg-primary-600' : 'bg-gray-200'"
                                class="relative inline-flex h-5 w-9 flex-shrink-0 cursor-pointer rounded-full transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
                                <span :class="isEnabled('{{ type.value }}', 'email') ? 'translate-x-4' : 'translate-x-0'"
                                      class="pointer-events-none inline-block h-4 w-4 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out mt-0.5 ml-0.5"></span>
                            </button>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endfor %}

    <div class="flex justify-end mb-8">
        <button @click="save()" :disabled="saving"
            class="inline-flex items-center gap-2 px-4 py-2 bg-primary-600 text-white text-sm font-medium rounded-lg hover:bg-primary-700 disabled:opacity-50 transition-colors">
            <span x-show="saving" class="animate-spin h-4 w-4 border-2 border-white border-t-transparent rounded-full"></span>
            Save Preferences
        </button>
    </div>
</div>

<script>
function notificationPreferences(initial) {
    return {
        prefs: initial || {},
        saving: false,
        isEnabled(type, channel) {
            if (this.prefs[type] && this.prefs[type][channel] !== undefined) {
                return this.prefs[type][channel];
            }
            // defaults are handled server-side, but for UI we assume true for in_app
            return channel === 'in_app';
        },
        toggle(type, channel) {
            if (!this.prefs[type]) this.prefs[type] = {};
            this.prefs[type][channel] = !this.isEnabled(type, channel);
        },
        save() {
            this.saving = true;
            fetch('{{ path("app_settings_notifications") }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                },
                body: JSON.stringify({ preferences: this.prefs }),
            })
            .then(r => r.json())
            .then(data => {
                this.saving = false;
                if (data.success && typeof toastr !== 'undefined') {
                    toastr.success('Preferences saved');
                }
            })
            .catch(() => {
                this.saving = false;
                if (typeof toastr !== 'undefined') {
                    toastr.error('Failed to save preferences');
                }
            });
        }
    };
}
</script>
{% endblock %}
