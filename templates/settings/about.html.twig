<script>
function initAboutPage() {
    const aboutNav = document.getElementById('about-nav');
    if (!aboutNav || aboutNav.dataset.initialized) return;
    aboutNav.dataset.initialized = 'true';

    const navLinks = aboutNav.querySelectorAll('.about-nav-link');
    const sections = ['section-overview', 'section-features', 'section-tech', 'section-changelog'];

    // Smooth scroll on click
    navLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const targetId = this.getAttribute('data-section');
            const targetEl = document.getElementById(targetId);
            if (targetEl) {
                targetEl.scrollIntoView({ behavior: 'smooth', block: 'start' });
                setActiveNavLink(targetId);
            }
        });
    });

    // Update active link
    function setActiveNavLink(sectionId) {
        navLinks.forEach(link => {
            const linkSection = link.getAttribute('data-section');
            if (linkSection === sectionId) {
                link.classList.add('bg-primary-50', 'text-primary-600');
                link.querySelector('svg').classList.remove('text-gray-400');
                link.querySelector('svg').classList.add('text-primary-500');
            } else {
                link.classList.remove('bg-primary-50', 'text-primary-600');
                link.querySelector('svg').classList.add('text-gray-400');
                link.querySelector('svg').classList.remove('text-primary-500');
            }
        });
    }

    // Intersection observer for scroll-based active state
    const observerOptions = {
        root: null,
        rootMargin: '-20% 0px -60% 0px',
        threshold: 0
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                setActiveNavLink(entry.target.id);
            }
        });
    }, observerOptions);

    sections.forEach(sectionId => {
        const section = document.getElementById(sectionId);
        if (section) observer.observe(section);
    });

    // Set initial active state
    setActiveNavLink('section-overview');
}

// Inline text editing for editable elements
function initEditableText() {
    document.querySelectorAll('.editable-text').forEach(element => {
        if (element.dataset.editableInitialized) return;
        element.dataset.editableInitialized = 'true';

        element.addEventListener('click', function() {
            if (this.querySelector('input')) return; // Already editing

            const currentValue = this.textContent.trim();
            const endpoint = this.dataset.endpoint;
            const originalClasses = this.className;

            // Create input
            const input = document.createElement('input');
            input.type = 'text';
            input.value = currentValue;
            input.className = 'bg-white border border-primary-300 rounded px-2 py-0.5 text-sm focus:outline-none focus:ring-2 focus:ring-primary-500';
            input.style.minWidth = '80px';
            input.style.width = Math.max(100, currentValue.length * 8) + 'px';

            // Replace content with input
            this.textContent = '';
            this.appendChild(input);
            input.focus();
            input.select();

            const saveValue = async () => {
                const newValue = input.value.trim();
                if (!newValue) {
                    this.textContent = currentValue;
                    return;
                }

                if (newValue === currentValue) {
                    this.textContent = currentValue;
                    return;
                }

                try {
                    const response = await fetch(endpoint, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest',
                        },
                        body: JSON.stringify({ value: newValue }),
                    });

                    if (response.ok) {
                        this.textContent = newValue;
                        if (typeof Toastr !== 'undefined') {
                            Toastr.success('Saved', 'Updated successfully');
                        }
                    } else {
                        const data = await response.json();
                        this.textContent = currentValue;
                        if (typeof Toastr !== 'undefined') {
                            Toastr.error('Error', data.error || 'Failed to save');
                        }
                    }
                } catch (error) {
                    console.error('Error saving:', error);
                    this.textContent = currentValue;
                    if (typeof Toastr !== 'undefined') {
                        Toastr.error('Error', 'Failed to save');
                    }
                }
            };

            input.addEventListener('blur', saveValue);
            input.addEventListener('keydown', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    this.blur();
                } else if (e.key === 'Escape') {
                    e.preventDefault();
                    element.textContent = currentValue;
                }
            });
        });
    });
}

// Load changelogs asynchronously
async function loadChangelogs() {
    const loadingEl = document.getElementById('changelog-loading');
    const listEl = document.getElementById('changelog-list');
    const emptyEl = document.getElementById('changelog-empty');

    if (!listEl || listEl.dataset.loaded) return;
    listEl.dataset.loaded = 'true';

    try {
        const response = await fetch('{{ path('app_settings_changelogs') }}', {
            headers: { 'X-Requested-With': 'XMLHttpRequest' },
        });

        if (!response.ok) throw new Error('Failed to load changelogs');

        const data = await response.json();
        const changelogs = data.changelogs || [];

        if (loadingEl) loadingEl.classList.add('hidden');

        if (changelogs.length === 0) {
            if (emptyEl) emptyEl.classList.remove('hidden');
            return;
        }

        listEl.innerHTML = changelogs.map((changelog, index) => `
            <li class="${index < changelogs.length - 1 ? 'pb-6' : ''}">
                <div class="relative">
                    <div class="flex items-start gap-4">
                        <div class="flex-shrink-0">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-primary-100 text-primary-600">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                                </svg>
                            </span>
                        </div>
                        <div class="min-w-0 flex-1">
                            <div class="flex items-center gap-2 flex-wrap">
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-semibold bg-primary-100 text-primary-800">v${changelog.version}</span>
                                <span class="text-xs text-gray-500">${changelog.title}</span>
                                <span class="text-xs text-gray-400">&bull;</span>
                                <span class="text-xs text-gray-400">${changelog.releaseDate}</span>
                            </div>
                            <ul class="mt-2 text-sm text-gray-600 space-y-1">
                                ${changelog.changes.map(change => `
                                    <li class="flex items-start gap-2">
                                        <svg class="w-4 h-4 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
                                        </svg>
                                        ${change}
                                    </li>
                                `).join('')}
                            </ul>
                        </div>
                    </div>
                </div>
            </li>
        `).join('');

        listEl.classList.remove('hidden');
    } catch (error) {
        console.error('Error loading changelogs:', error);
        if (loadingEl) loadingEl.innerHTML = '<span class="text-sm text-red-500">Failed to load changelog</span>';
    }
}

