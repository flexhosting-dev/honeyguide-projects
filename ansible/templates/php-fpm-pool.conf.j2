[{{ app_name }}]
user = {{ app_user }}
group = {{ app_group }}

listen = /run/php/php{{ php_version }}-fpm-{{ app_name }}.sock
listen.owner = www-data
listen.group = www-data
listen.mode = 0660

; Process manager settings
pm = dynamic
pm.max_children = 20
pm.start_servers = 4
pm.min_spare_servers = 2
pm.max_spare_servers = 8
pm.max_requests = 500

; Timeouts
request_terminate_timeout = {{ php_max_execution_time }}s

; Environment variables
env[APP_ENV] = {{ app_env }}
env[APP_DEBUG] = {{ '1' if app_debug else '0' }}

; PHP settings for this pool
php_admin_value[memory_limit] = {{ php_memory_limit }}
php_admin_value[max_execution_time] = {{ php_max_execution_time }}
php_admin_value[upload_max_filesize] = {{ php_upload_max_filesize }}
php_admin_value[post_max_size] = {{ php_post_max_size }}

; Security
php_admin_value[expose_php] = Off
php_admin_value[open_basedir] = {{ app_root }}:/tmp:/usr/share/php

; Logging
php_admin_flag[log_errors] = on
php_admin_value[error_log] = /var/log/php/{{ app_name }}_error.log

; OPcache
php_admin_value[opcache.enable] = 1
php_admin_value[opcache.memory_consumption] = 128
php_admin_value[opcache.interned_strings_buffer] = 16
php_admin_value[opcache.max_accelerated_files] = 10000
php_admin_value[opcache.validate_timestamps] = 0
php_admin_value[opcache.revalidate_freq] = 0
