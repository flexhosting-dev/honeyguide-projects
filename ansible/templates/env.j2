# This file is managed by Ansible - do not edit directly

APP_ENV={{ app_env }}
APP_DEBUG={{ app_debug | string | lower }}
APP_SECRET={{ app_secret }}

# Domain
DOMAIN={{ app_domain }}

# Trusted proxies (for load balancers, reverse proxies)
TRUSTED_PROXIES=127.0.0.1,REMOTE_ADDR

# Database
DATABASE_URL="mysql://{{ mysql_user }}:{{ mysql_password }}@127.0.0.1:3306/{{ mysql_database }}?serverVersion=8.0&charset=utf8mb4"

# Mailer
MAILER_DSN={{ mailer_dsn }}
MAILER_FROM_ADDRESS=noreply@{{ app_domain }}
MAILER_FROM_NAME="Honeyguide Projects"

# JWT
JWT_PASSPHRASE={{ jwt_passphrase }}

###> knpuniversity/oauth2-client-bundle ###
GOOGLE_CLIENT_ID={{ google_client_id }}
GOOGLE_CLIENT_SECRET={{ google_client_secret }}
GOOGLE_AUTH_ENABLED={{ google_auth_enabled }}
GOOGLE_ALLOWED_DOMAINS={{ google_allowed_domains }}
###< knpuniversity/oauth2-client-bundle ###

# Registration settings
ALLOWED_REGISTRATION_DOMAINS=
