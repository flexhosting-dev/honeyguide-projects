{% extends 'layout.html.twig' %}

{% block title %}Edit {{ milestone.name }} - Zoho Projects Clone{% endblock %}

{% block content %}
<div class="mx-auto max-w-2xl">
    <div class="mb-8">
        <a href="{{ path('app_project_show', {id: project.id}) }}" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
            <svg class="mr-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
            </svg>
            Back to {{ project.name }}
        </a>
    </div>

    <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-semibold leading-6 text-gray-900">Edit milestone</h3>
            <p class="mt-1 text-sm text-gray-500">Update the milestone details below.</p>

            <div class="mt-6">
                {% include 'milestone/_form.html.twig' with {form: form, button_text: 'Save Changes'} %}
            </div>
        </div>
    </div>

    {# Delete Section #}
    <div class="mt-8 bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-semibold leading-6 text-red-600">Danger Zone</h3>
            <p class="mt-1 text-sm text-gray-500">Deleting this milestone will also delete all tasks within it.</p>

            <div class="mt-4">
                <form action="{{ path('app_milestone_delete', {projectId: project.id, id: milestone.id}) }}" method="post"
                      data-controller="confirm" data-confirm-message-value="Are you sure you want to delete this milestone? All tasks will be deleted.">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ milestone.id) }}">
                    <button type="submit" data-action="confirm#confirm"
                            class="inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500">
                        Delete Milestone
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
