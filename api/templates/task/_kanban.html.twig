                            <span class="kanban-title-badge inline-flex items-center rounded-full bg-gray-500 px-3 py-1 text-xs font-medium text-white">
                                To Do (<span class="kanban-count">{{ tasksByStatus.todo|length }}</span>)
                            </span>
