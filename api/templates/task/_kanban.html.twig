        <div id="kanban-status" class="kanban-board kanban-grid">
            {# To Do Column #}
            <div class="kanban-column rounded-lg bg-gray-100 flex flex-col" data-value="todo"
                 ondragover="kanbanDragOver(event)"
                 ondragleave="kanbanDragLeave(event)"
