{% extends 'layout.html.twig' %}

{% block title %}New Task - {{ project.name }} - Zoho Projects Clone{% endblock %}

{% block content %}
<div class="mx-auto max-w-2xl">
    <div class="mb-8">
        <a href="{{ path('app_project_show', {id: project.id}) }}" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
            <svg class="mr-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
            </svg>
            Back to {{ project.name }}
        </a>
    </div>

    <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-semibold leading-6 text-gray-900">Create a new task</h3>
            <p class="mt-1 text-sm text-gray-500">Adding to milestone: <span class="font-medium">{{ milestone.name }}</span></p>

            <div class="mt-6">
                {% include 'task/_form.html.twig' with {form: form, button_text: 'Create Task'} %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
