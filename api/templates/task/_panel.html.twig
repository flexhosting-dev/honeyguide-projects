{# Task Panel Content - loaded via AJAX into off-canvas #}
<div class="flex flex-col h-full" data-task-id="{{ task.id }}" data-project-id="{{ project.id }}">
    {# Header #}
    <div class="flex-shrink-0 px-6 py-4 border-b border-gray-200">
        <div class="flex items-start justify-between">
            <div class="flex-1 min-w-0">
                {# Editable Title #}
                <h2 class="text-lg font-semibold text-gray-900 editable-title outline-none rounded px-1 -mx-1 hover:bg-gray-50 focus:bg-white focus:ring-2 focus:ring-primary-500"
                    contenteditable="true"
                    data-field="title"
                    data-original="{{ task.title }}"
                    data-endpoint="{{ path('app_task_update_title', {id: task.id}) }}">{{ task.title }}</h2>
                <p class="mt-1 text-sm text-gray-500">
                    {{ project.name }} / {{ task.milestone.name }}
                </p>
                <div class="flex items-center flex-wrap gap-2 mt-2">
                    {# Editable Status Badge #}
                    <div class="relative inline-block">
                        <button type="button"
                                class="status-badge-btn inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium cursor-pointer hover:ring-2 hover:ring-offset-1 hover:ring-gray-300
                                    {% if task.status.value == 'completed' %}bg-green-100 text-green-700
                                    {% elseif task.status.value == 'in_progress' %}bg-blue-100 text-blue-700
                                    {% elseif task.status.value == 'in_review' %}bg-yellow-100 text-yellow-700
                                    {% else %}bg-gray-100 text-gray-700{% endif %}"
                                data-current="{{ task.status.value }}"
                                onclick="toggleStatusDropdown(this)">
                            <span class="status-label">{{ task.status.label }}</span>
                            <svg class="ml-1 h-3 w-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                            </svg>
                        </button>
                        <div class="status-dropdown hidden absolute left-0 mt-1 w-40 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-10">
                            <div class="py-1">
                                <button type="button" onclick="updateTaskStatus('{{ task.id }}', 'todo', this)" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <span class="w-2 h-2 rounded-full bg-gray-400 mr-2"></span> To Do
                                </button>
                                <button type="button" onclick="updateTaskStatus('{{ task.id }}', 'in_progress', this)" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <span class="w-2 h-2 rounded-full bg-blue-400 mr-2"></span> In Progress
                                </button>
                                <button type="button" onclick="updateTaskStatus('{{ task.id }}', 'in_review', this)" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <span class="w-2 h-2 rounded-full bg-yellow-400 mr-2"></span> In Review
                                </button>
                                <button type="button" onclick="updateTaskStatus('{{ task.id }}', 'completed', this)" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <span class="w-2 h-2 rounded-full bg-green-400 mr-2"></span> Completed
                                </button>
                            </div>
                        </div>
                    </div>

                    {# Editable Priority Badge #}
                    <div class="relative inline-block">
                        <button type="button"
                                class="priority-badge-btn inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium cursor-pointer hover:ring-2 hover:ring-offset-1 hover:ring-gray-300
                                    {% if task.priority.value == 'urgent' %}bg-red-100 text-red-700
                                    {% elseif task.priority.value == 'high' %}bg-orange-100 text-orange-700
                                    {% elseif task.priority.value == 'medium' %}bg-yellow-100 text-yellow-700
                                    {% else %}bg-gray-100 text-gray-700{% endif %}"
                                data-current="{{ task.priority.value }}"
                                onclick="togglePriorityDropdown(this)">
                            <span class="priority-label">{{ task.priority.label }}</span>
                            <svg class="ml-1 h-3 w-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                            </svg>
                        </button>
                        <div class="priority-dropdown hidden absolute left-0 mt-1 w-40 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-10">
                            <div class="py-1">
                                <button type="button" onclick="updateTaskPriority('{{ task.id }}', 'low', this)" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <span class="w-2 h-2 rounded-full bg-gray-400 mr-2"></span> Low
                                </button>
                                <button type="button" onclick="updateTaskPriority('{{ task.id }}', 'medium', this)" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <span class="w-2 h-2 rounded-full bg-yellow-400 mr-2"></span> Medium
                                </button>
                                <button type="button" onclick="updateTaskPriority('{{ task.id }}', 'high', this)" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <span class="w-2 h-2 rounded-full bg-orange-400 mr-2"></span> High
                                </button>
                                <button type="button" onclick="updateTaskPriority('{{ task.id }}', 'urgent', this)" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <span class="w-2 h-2 rounded-full bg-red-400 mr-2"></span> Urgent
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button type="button" onclick="closeTaskPanel()" class="ml-4 rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-500">
                <span class="sr-only">Close panel</span>
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
    </div>

    {# Content #}
    <div class="flex-1 overflow-y-auto px-6 py-4">
        {# Editable Description #}
        <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-900 mb-2">Description</h3>
            <div class="description-container">
                <div class="description-display text-sm text-gray-600 whitespace-pre-wrap rounded p-2 -m-2 hover:bg-gray-50 cursor-pointer min-h-[60px] {{ task.description ? '' : 'text-gray-400 italic' }}"
                     onclick="showDescriptionEditor(this)"
                     data-placeholder="Click to add description...">{{ task.description ?: 'Click to add description...' }}</div>
                <div class="description-editor hidden">
                    <textarea class="w-full text-sm text-gray-600 border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 min-h-[100px]"
                              data-endpoint="{{ path('app_task_update_description', {id: task.id}) }}"
                              data-original="{{ task.description }}">{{ task.description }}</textarea>
                    <div class="flex justify-end gap-2 mt-2">
                        <button type="button" onclick="cancelDescriptionEdit(this)" class="px-3 py-1.5 text-sm text-gray-600 hover:text-gray-800">Cancel</button>
                        <button type="button" onclick="saveDescription(this)" class="px-3 py-1.5 text-sm bg-primary-600 text-white rounded-md hover:bg-primary-500">Save</button>
                    </div>
                </div>
            </div>
        </div>

        {# Details Grid #}
        <div class="mb-6 grid grid-cols-2 gap-4">
            {# Editable Start Date #}
            <div>
                <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Start Date</dt>
                <dd class="mt-1">
                    <div class="relative">
                        <input type="date"
                               class="start-date-input text-sm border-0 p-0 bg-transparent cursor-pointer hover:text-primary-600 focus:ring-0 text-gray-900"
                               value="{{ task.startDate ? task.startDate|date('Y-m-d') : '' }}"
                               data-original="{{ task.startDate ? task.startDate|date('Y-m-d') : '' }}"
                               data-endpoint="{{ path('app_task_update_start_date', {id: task.id}) }}"
                               onchange="updateStartDate(this)">
                        {% if not task.startDate %}
                            <span class="start-date-placeholder text-sm text-gray-400 italic pointer-events-none absolute left-0 top-0">No start date</span>
                        {% endif %}
                    </div>
                </dd>
            </div>
            {# Editable Due Date #}
            <div>
                <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Due Date</dt>
                <dd class="mt-1">
                    <div class="relative">
                        <input type="date"
                               class="due-date-input text-sm border-0 p-0 bg-transparent cursor-pointer hover:text-primary-600 focus:ring-0 {{ task.isOverdue ? 'text-red-600 font-medium' : 'text-gray-900' }}"
                               value="{{ task.dueDate ? task.dueDate|date('Y-m-d') : '' }}"
                               data-original="{{ task.dueDate ? task.dueDate|date('Y-m-d') : '' }}"
                               data-endpoint="{{ path('app_task_update_due_date', {id: task.id}) }}"
                               onchange="updateDueDate(this)">
                        {% if not task.dueDate %}
                            <span class="due-date-placeholder text-sm text-gray-400 italic pointer-events-none absolute left-0 top-0">No due date</span>
                        {% endif %}
                    </div>
                </dd>
            </div>
            {# Editable Milestone #}
            <div>
                <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Milestone</dt>
                <dd class="mt-1">
                    <div class="relative inline-block">
                        <button type="button"
                                class="milestone-btn text-sm text-gray-900 hover:text-primary-600 flex items-center"
                                onclick="toggleMilestoneDropdown(this)">
                            <span class="milestone-label">{{ task.milestone.name }}</span>
                            <svg class="ml-1 h-3 w-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                            </svg>
                        </button>
                        <div class="milestone-dropdown hidden absolute left-0 mt-1 w-48 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-10">
                            <div class="py-1">
                                {% for milestone in project.milestones %}
                                    <button type="button"
                                            onclick="updateTaskMilestone('{{ task.id }}', '{{ milestone.id }}', '{{ milestone.name }}', this)"
                                            class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 {{ milestone.id == task.milestone.id ? 'bg-gray-50 font-medium' : '' }}">
                                        {{ milestone.name }}
                                    </button>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </dd>
            </div>
            <div>
                <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Created</dt>
                <dd class="mt-1 text-sm text-gray-900">{{ task.createdAt|date('M d, Y') }}</dd>
            </div>
        </div>

        {# Editable Assignees #}
        <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-900 mb-2">Assignees</h3>
            <div class="assignees-container" data-task-id="{{ task.id }}" data-project-id="{{ project.id }}">
                <div class="assignees-list flex flex-wrap gap-2">
                    {% for assignee in task.assignees %}
                        <span class="assignee-chip inline-flex items-center rounded-full bg-gray-100 py-1 pl-2 pr-1 text-sm font-medium text-gray-800" data-user-id="{{ assignee.user.id }}">
                            <span class="inline-flex h-6 w-6 items-center justify-center rounded-full bg-primary-100 mr-2">
                                <span class="text-xs font-medium text-primary-700">
                                    {{ assignee.user.firstName|slice(0, 1)|upper }}{{ assignee.user.lastName|slice(0, 1)|upper }}
                                </span>
                            </span>
                            {{ assignee.user.fullName }}
                            <button type="button"
                                    onclick="removeAssignee('{{ task.id }}', '{{ assignee.user.id }}', this)"
                                    class="ml-1 inline-flex h-5 w-5 items-center justify-center rounded-full text-gray-400 hover:bg-gray-200 hover:text-gray-600">
                                <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                            </button>
                        </span>
                    {% endfor %}
                    <button type="button"
                            onclick="showAddAssigneeDropdown(this)"
                            class="add-assignee-btn inline-flex items-center rounded-full border-2 border-dashed border-gray-300 px-3 py-1 text-sm text-gray-500 hover:border-gray-400 hover:text-gray-600">
                        <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                        </svg>
                        Add
                    </button>
                </div>
                {# Add Assignee Dropdown (loaded dynamically) #}
                <div class="add-assignee-dropdown hidden absolute mt-1 w-56 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-10">
                    <div class="py-1 max-h-48 overflow-y-auto">
                        <div class="px-4 py-2 text-sm text-gray-500">Loading...</div>
                    </div>
                </div>
            </div>
            {% if task.assignees|length == 0 %}
                <p class="no-assignees-msg text-sm text-gray-400 italic mt-2">No assignees</p>
            {% endif %}
        </div>

        {# Comments with Inline Form #}
        <div>
            <h3 class="text-sm font-medium text-gray-900 mb-2">
                Comments
                <span class="comments-count text-gray-400 font-normal">{% if task.comments|length > 0 %}({{ task.comments|length }}){% endif %}</span>
            </h3>

            {# Add Comment Form #}
            <div class="add-comment-form mb-4">
                <div class="flex gap-3">
                    <div class="flex-shrink-0">
                        <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-primary-100">
                            <span class="text-sm font-medium text-primary-700">
                                {{ app.user.firstName|slice(0, 1)|upper }}
                            </span>
                        </span>
                    </div>
                    <div class="flex-1">
                        <textarea class="comment-textarea w-full text-sm border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 resize-none"
                                  rows="2"
                                  placeholder="Add a comment..."
                                  data-task-id="{{ task.id }}"></textarea>
                        <div class="flex justify-end mt-2">
                            <button type="button"
                                    onclick="addComment('{{ task.id }}', this)"
                                    class="add-comment-btn px-3 py-1.5 text-sm bg-primary-600 text-white rounded-md hover:bg-primary-500 disabled:opacity-50 disabled:cursor-not-allowed"
                                    disabled>
                                Post Comment
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            {# Comments List #}
            <div class="comments-list space-y-4">
                {% for comment in task.comments %}
                    <div class="comment-item bg-gray-50 rounded-lg p-3" data-comment-id="{{ comment.id }}">
                        <div class="flex items-center mb-2">
                            <span class="inline-flex h-6 w-6 items-center justify-center rounded-full bg-primary-100 mr-2">
                                <span class="text-xs font-medium text-primary-700">
                                    {{ comment.author.firstName|slice(0, 1)|upper }}
                                </span>
                            </span>
                            <span class="text-sm font-medium text-gray-900">{{ comment.author.fullName }}</span>
                            <span class="ml-auto text-xs text-gray-500">{{ comment.createdAt|date('M d, H:i') }}</span>
                        </div>
                        <p class="text-sm text-gray-600 whitespace-pre-wrap">{{ comment.content }}</p>
                    </div>
                {% else %}
                    <p class="no-comments-msg text-sm text-gray-400 italic">No comments yet</p>
                {% endfor %}
            </div>
        </div>
    </div>

    {# Footer Actions #}
    <div class="flex-shrink-0 px-6 py-4 border-t border-gray-200 bg-gray-50">
        <div class="flex justify-center">
            <a href="{{ path('app_task_show', {id: task.id}) }}"
               class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900">
                <svg class="mr-1.5 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                </svg>
                Open Full Page
            </a>
        </div>
    </div>
</div>
